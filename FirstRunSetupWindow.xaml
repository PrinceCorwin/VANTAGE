<Window x:Class="VANTAGE.FirstRunSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to VANTAGE" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        Foreground="#FFFFFFFF"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <!-- Title -->
            <TextBlock Text="Complete Your Profile" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="#FFFFFFFF"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

            <!-- Full Name -->
            <TextBlock Text="Full Name:" Foreground="#FFFFFFFF" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" 
                     Height="35" 
                     Padding="10"
                     Background="#FF2A2A2A"
                     Foreground="#FFFFFFFF"
                     BorderBrush="#FF3C3C3C"
                     BorderThickness="1"
                     Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email:" Foreground="#FFFFFFFF" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" 
                     Height="35" 
                     Padding="10"
                     Background="#FF2A2A2A"
                     Foreground="#FFFFFFFF"
                     BorderBrush="#FF3C3C3C"
                     BorderThickness="1"
                     Margin="0,0,0,15"/>

            <!-- Phone Number -->
            <TextBlock Text="Phone Number:" Foreground="#FFFFFFFF" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneTextBox" 
                     Height="35" 
                     Padding="10"
                     Background="#FF2A2A2A"
                     Foreground="#FFFFFFFF"
                     BorderBrush="#FF3C3C3C"
                     BorderThickness="1"
                     Margin="0,0,0,25"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Width="100" 
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#FF3C3C3C"
                        Foreground="#FFFFFFFF"
                        BorderBrush="#FF0078D7"
                        BorderThickness="1"
                        Click="CancelButton_Click"/>

                <Button x:Name="SaveButton" 
                        Content="Save" 
                        Width="100" 
                        Height="35"
                        Background="#FF0078D7"
                        Foreground="#FFFFFFFF"
                        BorderBrush="#FF0078D7"
                        BorderThickness="1"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>