<UserControl x:Class="VANTAGE.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:converters="clr-namespace:VANTAGE.Converters"
             Background="{DynamicResource BackgroundColor}">

    <UserControl.Resources>
        <!-- Converters for progress bar cells -->
        <converters:PercentToDecimalConverter x:Key="PercentToDecimalConverter"/>
        <converters:PercentToColorConverter x:Key="PercentToColorConverter"/>

        <!-- Filter Button Style with Visual Feedback -->
        <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="6" Direction="315"
                                      Opacity="{DynamicResource ButtonShadowOpacity}"
                                      Color="{DynamicResource ButtonShadowColor}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ButtonHoverForeground}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ToggleCheckedBackground}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ToggleCheckedBackground}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter toggle for buttons with colored backgrounds (Required Fields) -->
        <Style x:Key="ActionFilterToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource StatusRedBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource ActionFilterForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="6" Direction="315"
                                      Opacity="{DynamicResource ButtonShadowOpacity}"
                                      Color="{DynamicResource ButtonShadowColor}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ButtonHoverForeground}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ToggleCheckedBackground}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ToggleCheckedBackground}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridSplitter Style for Fluent Dark theme -->
        <Style x:Key="HorizontalGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="{DynamicResource ControlBorder}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="SizeNS"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource ControlBorder}"
                                BorderThickness="0,1">
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <Ellipse Width="3" Height="3" Fill="{DynamicResource SplitterDots}" Margin="2,0"/>
                                <Ellipse Width="3" Height="3" Fill="{DynamicResource SplitterDots}" Margin="2,0"/>
                                <Ellipse Width="3" Height="3" Fill="{DynamicResource SplitterDots}" Margin="2,0"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Base cell style for consistent borders and foreground color -->
        <Style TargetType="syncfusion:GridCell">
            <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
            <Setter Property="Padding" Value="4,0,4,0"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
        </Style>

        <!-- Required field styles (red background when field needs attention) -->
        <!-- Both ScheduleMasterRow and ScheduleViewModel implement IScheduleCellIndicators -->
        <!-- ViewModel returns false for all; this handles Syncfusion cell recycling without Error 40 -->
        <Style x:Key="MissedStartReasonRequiredStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsMissedStartReasonRequired}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MissedFinishReasonRequiredStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsMissedFinishReasonRequired}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThreeWeekStartRequiredStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <!-- Yellow for forecast different from P6 (lower priority) -->
                <DataTrigger Binding="{Binding Path=HasThreeWeekStartForecast}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusYellowBg}"/>
                    <Setter Property="Foreground" Value="{DynamicResource StatusYellowFg}"/>
                </DataTrigger>
                <!-- Red for required field (higher priority - must come after yellow) -->
                <DataTrigger Binding="{Binding Path=IsThreeWeekStartRequired}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThreeWeekFinishRequiredStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <!-- Yellow for forecast different from P6 (lower priority) -->
                <DataTrigger Binding="{Binding Path=HasThreeWeekFinishForecast}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusYellowBg}"/>
                    <Setter Property="Foreground" Value="{DynamicResource StatusYellowFg}"/>
                </DataTrigger>
                <!-- Red for required field (higher priority - must come after yellow) -->
                <DataTrigger Binding="{Binding Path=IsThreeWeekFinishRequired}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSStartVarianceStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasStartVariance}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusYellowBg}"/>
                    <Setter Property="Foreground" Value="{DynamicResource StatusYellowFg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSFinishVarianceStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasFinishVariance}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusYellowBg}"/>
                    <Setter Property="Foreground" Value="{DynamicResource StatusYellowFg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSBudgetMHsVarianceStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasBudgetMHsVariance}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusYellowBg}"/>
                    <Setter Property="Foreground" Value="{DynamicResource StatusYellowFg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSPercentCompleteVarianceStyle" TargetType="syncfusion:GridCell" BasedOn="{StaticResource {x:Type syncfusion:GridCell}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasPercentCompleteVariance}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusYellowBg}"/>
                    <Setter Property="Foreground" Value="{DynamicResource StatusYellowFg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOOLBAR -->
        <Border Grid.Row="0"
                Background="{DynamicResource ToolbarBackground}"
                BorderBrush="{DynamicResource ControlBorder}"
                BorderThickness="0,0,0,1"
                Height="50">
            <StackPanel Orientation="Horizontal" 
                       Margin="15,0"
                       VerticalAlignment="Center">

                <TextBlock x:Name="txtWeekEndDate"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"
                       Margin="0,0,60,0">
                <Run Text="Week Ending: "/>
                <Run Text="{Binding SelectedWeekEndDate, StringFormat='MM-dd-yyyy', TargetNullValue='(No schedule loaded)'}"/>
                </TextBlock>

                <Button x:Name="btnRefresh"
                        Content="Refresh"
                        Width="80"
                        Height="32"
                        Background="{DynamicResource ControlBackground}"
                        BorderBrush="{DynamicResource ControlBorder}"
                        BorderThickness="1"
                        FontSize="11"
                        Click="btnRefresh_Click"
                        Margin="0,0,15,0"
                        Focusable="False"
                        ToolTip="Reload schedule data and clear all filters">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="6" Direction="315"
                                          Opacity="{DynamicResource ButtonShadowOpacity}"
                                          Color="{DynamicResource ButtonShadowColor}"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    TextElement.Foreground="{DynamicResource ForegroundColor}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackground}"/>
                                    <Setter TargetName="border" Property="TextElement.Foreground" Value="{DynamicResource ButtonHoverForeground}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <ToggleButton x:Name="btnFilterMissedStart"
                             Content="Missed Start"
                             IsChecked="{Binding FilterMissedStart, Mode=TwoWay}"
                             Style="{StaticResource FilterToggleButtonStyle}"
                             Margin="0,0,15,0"
                             ToolTip="Show activities that missed their planned start date"/>

                <ToggleButton x:Name="btnFilterMissedFinish"
                             Content="Missed Finish"
                             IsChecked="{Binding FilterMissedFinish, Mode=TwoWay}"
                             Style="{StaticResource FilterToggleButtonStyle}"
                             Margin="0,0,15,0"
                             ToolTip="Show activities that missed their planned finish date"/>

                <ToggleButton x:Name="btnFilter3WLA"
                             Content="3WLA"
                             IsChecked="{Binding Filter3WLA, Mode=TwoWay}"
                             Style="{StaticResource FilterToggleButtonStyle}"
                             Margin="0,0,15,0"
                             ToolTip="Show activities in 3-week lookahead window"/>

                <ToggleButton x:Name="btnFilterRequiredFields"
                             Content="{Binding RequiredFieldsButtonText}"
                             IsChecked="{Binding FilterRequiredFields, Mode=TwoWay}"
                             Style="{StaticResource ActionFilterToggleStyle}"
                             Width="130"
                             ToolTip="Show activities missing required field values"/>

                <!-- Separator -->
                <Border Width="1" Background="{DynamicResource ControlBorder}" Margin="15,6,15,6"/>

                <Button x:Name="btnFilterDiscrepancies"
                        Height="32"
                        FontSize="12"
                        Click="BtnFilterDiscrepancies_Click"
                        ToolTip="Filter by P6 vs MS discrepancy type">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="6" Direction="315"
                                          Opacity="{DynamicResource ButtonShadowOpacity}"
                                          Color="{DynamicResource ButtonShadowColor}"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Padding="8,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource ButtonHoverForeground}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackground}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Discrepancies" VerticalAlignment="Center"/>
                        <TextBlock Text=" &#x25BC;" FontSize="8" VerticalAlignment="Center" Margin="3,1,0,0"/>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu x:Name="ctxDiscrepancies"
                                     Background="{DynamicResource ControlBackground}"
                                     Foreground="{DynamicResource ForegroundColor}"
                                     BorderBrush="{DynamicResource ControlBorder}"
                                     BorderThickness="1">
                            <MenuItem Header="Clear Filter" Click="FilterDiscrepancy_Clear_Click"
                                      Background="{DynamicResource ControlBackground}"
                                      Foreground="{DynamicResource ForegroundColor}"/>
                            <MenuItem Header="Actual Start" Click="FilterDiscrepancy_Start_Click"
                                      Background="{DynamicResource ControlBackground}"
                                      Foreground="{DynamicResource ForegroundColor}"/>
                            <MenuItem Header="Actual Finish" Click="FilterDiscrepancy_Finish_Click"
                                      Background="{DynamicResource ControlBackground}"
                                      Foreground="{DynamicResource ForegroundColor}"/>
                            <MenuItem Header="MHs" Click="FilterDiscrepancy_MHs_Click"
                                      Background="{DynamicResource ControlBackground}"
                                      Foreground="{DynamicResource ForegroundColor}"/>
                            <MenuItem Header="% Complete" Click="FilterDiscrepancy_Percent_Click"
                                      Background="{DynamicResource ControlBackground}"
                                      Foreground="{DynamicResource ForegroundColor}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- Separator -->
                <Border Width="1" Background="{DynamicResource ControlBorder}" Margin="15,6,15,6"/>

                <Button x:Name="btnClearFilters"
                        Content="Clear Filters"
                        Width="90"
                        Height="32"
                        Background="{DynamicResource ControlBackground}"
                        BorderBrush="{DynamicResource ControlBorder}"
                        BorderThickness="1"
                        FontSize="11"
                        Click="btnClearFilters_Click"
                        Focusable="False"
                        ToolTip="Clear all active filters">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="6" Direction="315"
                                          Opacity="{DynamicResource ButtonShadowOpacity}"
                                          Color="{DynamicResource ButtonShadowColor}"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    TextElement.Foreground="{DynamicResource ForegroundColor}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackground}"/>
                                    <Setter TargetName="border" Property="TextElement.Foreground" Value="{DynamicResource ButtonHoverForeground}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Separator -->
                <Border Width="1" Background="{DynamicResource ControlBorder}" Margin="15,6,15,6"/>

                <Button x:Name="btnSave"
                        Content="SAVE"
                        Width="80"
                        Height="32"
                        BorderThickness="1"
                        FontSize="11"
                        Click="btnSave_Click"
                        ToolTip="Save all pending changes to database">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="4" BlurRadius="6" Direction="315"
                                          Opacity="{DynamicResource ButtonShadowOpacity}"
                                          Color="{DynamicResource ButtonShadowColor}"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlHoverBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource ButtonHoverForeground}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlPressedBackground}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasUnsavedChanges}" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource StatusRed}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource StatusRed}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- GRIDS CONTAINER (Master + Splitter + Detail) -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="MasterGridRow" Height="2*" MinHeight="100"/>
                <RowDefinition Height="6"/>
                <RowDefinition x:Name="DetailGridRow" Height="*" MinHeight="80"/>
            </Grid.RowDefinitions>

            <!-- MASTER GRID -->
            <syncfusion:SfDataGrid x:Name="sfScheduleMaster"
                          Grid.Row="0"
                          ItemsSource="{Binding MasterRows}"
                          AutoGenerateColumns="False"
                          AllowEditing="True"
                          EditTrigger="OnTap"
                          ColumnSizer="Star"
                          SelectionMode="Single"
                          SelectionUnit="Cell"
                          GridLinesVisibility="Both"
                          HeaderRowHeight="35"
                          RowHeight="30"
                          AllowSorting="True"
                          SortClickAction="DoubleClick"
                          AllowFiltering="True"
                          AllowResizingColumns="True"
                          AllowDraggingColumns="True"
                          ShowRowHeader="True"
                          RowHeaderWidth="30"
                          CurrentCellBeginEdit="SfScheduleMaster_CurrentCellBeginEdit"
                          Background="{DynamicResource BackgroundColor}"
                          Foreground="{DynamicResource ForegroundColor}"
                          PreviewMouseWheel="SfScheduleMaster_PreviewMouseWheel">

                <syncfusion:SfDataGrid.Resources>
                    <Style TargetType="syncfusion:GridCell">
                        <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
                        <Setter Property="Padding" Value="4,0,4,0"/>
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                    </Style>
                    <Style TargetType="syncfusion:GridHeaderCellControl">
                        <Setter Property="Background" Value="{DynamicResource GridHeaderBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource GridHeaderForeground}"/>
                        <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
                        <Setter Property="Padding" Value="4,0,4,0"/>
                    </Style>
                    <Style TargetType="syncfusion:FilterToggleButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="syncfusion:FilterToggleButton">
                                    <Grid SnapsToDevicePixels="True" Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="FilterStates">
                                                <VisualState x:Name="Filtered">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="{StaticResource FilterIconActiveColor}"
                                                                        Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="UnFiltered">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="{StaticResource FilterIconColor}"
                                                                        Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Path Data="M 1,2 L 11,2 L 7,6 L 7,10 L 5,10 L 5,6 Z"
                                              Stretch="Uniform" Width="10" Height="10"
                                              StrokeThickness="1.2" Fill="Transparent" Margin="3">
                                            <Path.Stroke>
                                                <SolidColorBrush x:Name="IconStroke" Color="{StaticResource FilterIconColor}"/>
                                            </Path.Stroke>
                                        </Path>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </syncfusion:SfDataGrid.Resources>

                <syncfusion:SfDataGrid.Columns>

                    <syncfusion:GridTextColumn MappingName="SchedActNO"
                                              HeaderText="SchedActNO"
                                              Width="120"
                                              AllowEditing="False"/>
                    <syncfusion:GridTextColumn MappingName="MissedStartReason" 
                                              HeaderText="Missed Start Reason" 
                                              Width="200"
                                              AllowEditing="True"
                                              CellStyle="{StaticResource MissedStartReasonRequiredStyle}"/>

                    <syncfusion:GridTextColumn MappingName="MissedFinishReason" 
                                                HeaderText="Missed Finish Reason" 
                                                Width="200"
                                                AllowEditing="True"
                                                CellStyle="{StaticResource MissedFinishReasonRequiredStyle}"/>

                    <syncfusion:GridDateTimeColumn MappingName="ThreeWeekStart"
                                                  HeaderText="3WLA Start"
                                                  Width="110"
                                                  AllowEditing="True"
                                                  CanEdit="True"
                                                  AllowNullValue="True"
                                                  NullText=""
                                                  Pattern="ShortDate"
                                                  CellStyle="{StaticResource ThreeWeekStartRequiredStyle}"/>

                    <syncfusion:GridDateTimeColumn MappingName="ThreeWeekFinish"
                                                  HeaderText="3WLA Finish"
                                                  Width="110"
                                                  AllowEditing="True"
                                                  CanEdit="True"
                                                  AllowNullValue="True"
                                                  NullText=""
                                                  Pattern="ShortDate"
                                                  CellStyle="{StaticResource ThreeWeekFinishRequiredStyle}"/>
                    <syncfusion:GridDateTimeColumn MappingName="V_Start" 
                                                  HeaderText="V-Start" 
                                                  Width="110"
                                                  DisplayBinding="{Binding V_Start, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"
                                                  CellStyle="{StaticResource MSStartVarianceStyle}"/>

                    <syncfusion:GridDateTimeColumn MappingName="V_Finish" 
                                                  HeaderText="V-Finish" 
                                                  Width="110"
                                                  DisplayBinding="{Binding V_Finish, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"
                                                  CellStyle="{StaticResource MSFinishVarianceStyle}"/>

                    <syncfusion:GridTextColumn MappingName="Description" 
                                              HeaderText="Description" 
                                              Width="250"
                                              AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_Start"
                                                  HeaderText="P6 Plan Strt"
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_Start, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_Finish"
                                                  HeaderText="P6 Plan Fin"
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_Finish, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_ActualStart" 
                                                  HeaderText="P6 Actual Start" 
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_ActualStart, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_ActualFinish" 
                                                  HeaderText="P6 Actual Finish" 
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_ActualFinish, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridTemplateColumn MappingName="P6_PercentComplete"
                                                 HeaderText="P6 %"
                                                 Width="80"
                                                 AllowEditing="False"
                                                 AllowFiltering="True"
                                                 AllowSorting="True">
                        <syncfusion:GridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding P6_PercentComplete, StringFormat='{}{0:F1}'}"
                                               VerticalAlignment="Center"
                                               Padding="4,0,4,0"/>
                                    <Rectangle Height="3" VerticalAlignment="Bottom"
                                               HorizontalAlignment="Stretch"
                                               Fill="{Binding P6_PercentComplete, Converter={StaticResource PercentToColorConverter}}"
                                               RenderTransformOrigin="0,0.5">
                                        <Rectangle.RenderTransform>
                                            <ScaleTransform ScaleX="{Binding P6_PercentComplete, Converter={StaticResource PercentToDecimalConverter}}"/>
                                        </Rectangle.RenderTransform>
                                    </Rectangle>
                                </Grid>
                            </DataTemplate>
                        </syncfusion:GridTemplateColumn.CellTemplate>
                    </syncfusion:GridTemplateColumn>

                    <syncfusion:GridNumericColumn MappingName="P6_BudgetMHs" 
                                                 HeaderText="P6 MHs" 
                                                 Width="90"
                                                 NumberDecimalDigits="1"
                                                 AllowEditing="False"/>

                    <syncfusion:GridTemplateColumn MappingName="MS_PercentComplete"
                                                 HeaderText="MS %"
                                                 Width="80"
                                                 AllowEditing="False"
                                                 AllowFiltering="True"
                                                 AllowSorting="True"
                                                 CellStyle="{StaticResource MSPercentCompleteVarianceStyle}">
                        <syncfusion:GridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding MS_PercentComplete, StringFormat='{}{0:F1}'}"
                                               VerticalAlignment="Center"
                                               Padding="4,0,4,0"/>
                                    <Rectangle Height="3" VerticalAlignment="Bottom"
                                               HorizontalAlignment="Stretch"
                                               Fill="{Binding MS_PercentComplete, Converter={StaticResource PercentToColorConverter}}"
                                               RenderTransformOrigin="0,0.5">
                                        <Rectangle.RenderTransform>
                                            <ScaleTransform ScaleX="{Binding MS_PercentComplete, Converter={StaticResource PercentToDecimalConverter}}"/>
                                        </Rectangle.RenderTransform>
                                    </Rectangle>
                                </Grid>
                            </DataTemplate>
                        </syncfusion:GridTemplateColumn.CellTemplate>
                    </syncfusion:GridTemplateColumn>

                    <syncfusion:GridNumericColumn MappingName="MS_BudgetMHs" 
                                                 HeaderText="MS MHs" 
                                                 Width="90"
                                                 NumberDecimalDigits="1"
                                                 AllowEditing="False"
                                                 CellStyle="{StaticResource MSBudgetMHsVarianceStyle}"/>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>

            <!-- GRID SPLITTER -->
            <GridSplitter x:Name="gridSplitter"
                         Grid.Row="1"
                         Height="6"
                         ResizeDirection="Rows"
                         ResizeBehavior="PreviousAndNext"
                         Style="{StaticResource HorizontalGridSplitterStyle}"
                         ToolTip="Drag to resize grids"/>

            <!-- DETAIL GRID (Child ProgressSnapshots) -->
            <Border Grid.Row="2"
                    BorderBrush="{DynamicResource ControlBorder}"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Grid Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource ToolbarBackground}"
                            Padding="10,5">
                        <TextBlock x:Name="txtDetailHeader"
                                  Text="Select a row above to view detail activities"
                                  Foreground="{DynamicResource ForegroundColor}"
                                  FontSize="12"
                                  FontWeight="SemiBold"/>
                    </Border>

                    <!-- Detail Grid -->
                    <syncfusion:SfDataGrid x:Name="sfScheduleDetail"
                                  Grid.Row="1"
                                  ItemsSource="{Binding DetailActivities}"
                                  AutoGenerateColumns="False"
                                  AllowEditing="True"
                                  EditTrigger="OnTap"
                                  ColumnSizer="Star"
                                  SelectionMode="Single"
                                  SelectionUnit="Cell"
                                  GridLinesVisibility="Both"
                                  HeaderRowHeight="32"
                                  RowHeight="28"
                                  AllowSorting="True"
                                  SortClickAction="DoubleClick"
                                  AllowFiltering="True"
                                  AllowResizingColumns="True"
                                  AllowDraggingColumns="True"
                                  ShowRowHeader="True"
                                  RowHeaderWidth="25"
                                  Background="{DynamicResource BackgroundColor}"
                                  Foreground="{DynamicResource ForegroundColor}">

                        <syncfusion:SfDataGrid.Resources>
                            <Style TargetType="syncfusion:GridCell">
                                <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
                                <Setter Property="Padding" Value="4,0,4,0"/>
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                            </Style>
                            <Style TargetType="syncfusion:GridHeaderCellControl">
                                <Setter Property="Background" Value="{DynamicResource GridHeaderBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource GridHeaderForeground}"/>
                                <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
                                <Setter Property="Padding" Value="4,0,4,0"/>
                            </Style>
                            <Style TargetType="syncfusion:FilterToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="syncfusion:FilterToggleButton">
                                            <Grid SnapsToDevicePixels="True" Background="Transparent">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="FilterStates">
                                                        <VisualState x:Name="Filtered">
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                                Storyboard.TargetProperty="Color"
                                                                                To="{StaticResource FilterIconActiveColor}"
                                                                                Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="UnFiltered">
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                                Storyboard.TargetProperty="Color"
                                                                                To="{StaticResource FilterIconColor}"
                                                                                Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <Path Data="M 1,2 L 11,2 L 7,6 L 7,10 L 5,10 L 5,6 Z"
                                                      Stretch="Uniform" Width="10" Height="10"
                                                      StrokeThickness="1.2" Fill="Transparent" Margin="3">
                                                    <Path.Stroke>
                                                        <SolidColorBrush x:Name="IconStroke" Color="{StaticResource FilterIconColor}"/>
                                                    </Path.Stroke>
                                                </Path>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </syncfusion:SfDataGrid.Resources>

                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn MappingName="UniqueID" 
                                                      HeaderText="UniqueID" 
                                                      Width="150"
                                                      AllowEditing="False"/>
                            <syncfusion:GridTextColumn MappingName="SchedActNO" 
                                                      HeaderText="SchedActNO" 
                                                      Width="130"
                                                      AllowEditing="False"/>

                            <syncfusion:GridTextColumn MappingName="Description" 
                                                      HeaderText="Description" 
                                                      Width="200"
                                                      AllowEditing="False"/>

                            <syncfusion:GridNumericColumn MappingName="PercentEntry" 
                                                         HeaderText="%" 
                                                         Width="70"
                                                         NumberDecimalDigits="1"
                                                         AllowEditing="True"/>

                            <syncfusion:GridNumericColumn MappingName="BudgetMHs"
                                                         HeaderText="Budget MHs"
                                                         Width="100"
                                                         NumberDecimalDigits="1"
                                                         AllowEditing="True"/>

                            <syncfusion:GridNumericColumn MappingName="EarnMHsCalc"
                                                         HeaderText="Earn MHs"
                                                         Width="100"
                                                         NumberDecimalDigits="3"
                                                         AllowEditing="False"/>

                            <syncfusion:GridDateTimeColumn MappingName="ActStart"
                                                          HeaderText="ActStart"
                                                          Width="110"
                                                          AllowEditing="True"
                                                          CanEdit="True"
                                                          AllowNullValue="True"
                                                          NullText=""
                                                          Pattern="ShortDate"/>

                            <syncfusion:GridDateTimeColumn MappingName="ActFin"
                                                          HeaderText="ActFin"
                                                          Width="110"
                                                          AllowEditing="True"
                                                          CanEdit="True"
                                                          AllowNullValue="True"
                                                          NullText=""
                                                          Pattern="ShortDate"/>

                            <syncfusion:GridTextColumn MappingName="AssignedTo" 
                                                      HeaderText="Assigned To" 
                                                      Width="120"
                                                      AllowEditing="False"/>
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <Border Grid.Row="2"
                Background="{DynamicResource ToolbarBackground}"
                BorderBrush="{DynamicResource ControlBorder}"
                BorderThickness="0,1,0,0"
                Height="30">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="15,0">
                    <TextBlock x:Name="txtStatus"
                              Text="Ready"
                              Foreground="{DynamicResource ForegroundColor}"
                              FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="15,0">
                    <Rectangle Width="14" Height="14" Fill="{DynamicResource StatusRedBg}" Margin="0,0,5,0"/>
                    <TextBlock Text="Required"
                              Foreground="{DynamicResource ForegroundColor}"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Rectangle Width="14" Height="14" Fill="{DynamicResource StatusYellowBg}" Margin="0,0,5,0"/>
                    <TextBlock Text="Forecast ≠ P6"
                              Foreground="{DynamicResource ForegroundColor}"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Rectangle Width="14" Height="14" Fill="{DynamicResource StatusYellow}" Margin="0,0,5,0"/>
                    <TextBlock Text="P6 vs Vtg Discrepancies"
                              Foreground="{DynamicResource ForegroundColor}"
                              FontSize="11"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- LOADING OVERLAY -->
        <Grid Grid.Row="1"
              Background="{DynamicResource OverlayBackground}"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <syncfusion:SfBusyIndicator IsBusy="True"
                                           AnimationType="DualRing"
                                           ViewboxWidth="80"
                                           ViewboxHeight="80"
                                           Foreground="{DynamicResource AccentColor}"/>
                <TextBlock Text="Loading schedule data..."
                          FontSize="16"
                          Foreground="{DynamicResource OverlayText}"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>