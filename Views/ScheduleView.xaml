<UserControl x:Class="VANTAGE.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Background="{StaticResource BackgroundColor}">

    <UserControl.Resources>
        <!-- Filter Button Style with Visual Feedback -->
        <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlPressedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter toggle for buttons with colored backgrounds (Required Fields) -->
        <Style x:Key="ActionFilterToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource StatusRedBg}"/>
            <Setter Property="Foreground" Value="{StaticResource ActionButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlPressedBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GridSplitter Style for Fluent Dark theme -->
        <Style x:Key="HorizontalGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="{StaticResource ControlBorder}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="SizeNS"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource ControlBorder}"
                                BorderThickness="0,1">
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <Ellipse Width="3" Height="3" Fill="{StaticResource SplitterDots}" Margin="2,0"/>
                                <Ellipse Width="3" Height="3" Fill="{StaticResource SplitterDots}" Margin="2,0"/>
                                <Ellipse Width="3" Height="3" Fill="{StaticResource SplitterDots}" Margin="2,0"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Required field styles (red background when field needs attention) -->
        <Style x:Key="MissedStartReasonRequiredStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsMissedStartReasonRequired}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MissedFinishReasonRequiredStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsMissedFinishReasonRequired}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThreeWeekStartRequiredStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsThreeWeekStartRequired}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThreeWeekFinishRequiredStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsThreeWeekFinishRequired}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusRedBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSStartVarianceStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasStartVariance}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusYellowBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSFinishVarianceStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasFinishVariance}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusYellowBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSBudgetMHsVarianceStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasBudgetMHsVariance}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusYellowBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MSPercentCompleteVarianceStyle" TargetType="syncfusion:GridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasPercentCompleteVariance}" Value="True">
                    <Setter Property="Background" Value="{StaticResource StatusYellowBg}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOOLBAR -->
        <Border Grid.Row="0"
                Background="{StaticResource ToolbarBackground}"
                BorderBrush="{StaticResource ControlBorder}"
                BorderThickness="0,0,0,1"
                Height="50">
            <StackPanel Orientation="Horizontal" 
                       Margin="15,0"
                       VerticalAlignment="Center">

                <TextBlock x:Name="txtWeekEndDate"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource ForegroundColor}"
                       Margin="0,0,20,0">
                <Run Text="Week Ending: "/>
                <Run Text="{Binding SelectedWeekEndDate, StringFormat='MM-dd-yyyy', TargetNullValue='(No schedule loaded)'}"/>
                </TextBlock>

                <TextBlock Text="Filters:" 
                          VerticalAlignment="Center"
                          Foreground="{StaticResource ForegroundColor}"
                          Margin="0,0,10,0"/>

                <ToggleButton x:Name="btnFilterMissedStart"
                             Content="Missed Start"
                             IsChecked="{Binding FilterMissedStart, Mode=TwoWay}"
                             Style="{StaticResource FilterToggleButtonStyle}"
                             Margin="0,0,5,0"
                             ToolTip="Show activities that missed their planned start date"/>

                <ToggleButton x:Name="btnFilterMissedFinish"
                             Content="Missed Finish"
                             IsChecked="{Binding FilterMissedFinish, Mode=TwoWay}"
                             Style="{StaticResource FilterToggleButtonStyle}"
                             Margin="0,0,5,0"
                             ToolTip="Show activities that missed their planned finish date"/>

                <ToggleButton x:Name="btnFilter3WLA"
                             Content="3WLA"
                             IsChecked="{Binding Filter3WLA, Mode=TwoWay}"
                             Style="{StaticResource FilterToggleButtonStyle}"
                             Margin="0,0,5,0"
                             ToolTip="Show activities in 3-week lookahead window"/>

                <syncfusion:DropDownButtonAdv x:Name="btnFilterDiscrepancies"
                                              Label="Discrepancies"
                                              Padding="0"
                                              Margin="0,0,5,0"
                                              Background="Transparent"
                                              Foreground="{StaticResource ForegroundColor}"
                                              BorderThickness="0"
                                              IconTemplate="{x:Null}"
                                              SmallIcon="{x:Null}"
                                              LargeIcon="{x:Null}"
                                              FontSize="12"
                                              SizeMode="Normal"
                                              ToolTip="Filter by P6 vs MS discrepancy type">
                    <syncfusion:DropDownMenuGroup
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderBrush="{StaticResource BorderColor}">
                        <syncfusion:DropDownMenuItem Header="Clear Filter" Click="FilterDiscrepancy_Clear_Click"/>
                        <syncfusion:DropDownMenuItem Header="Actual Start" Click="FilterDiscrepancy_Start_Click"/>
                        <syncfusion:DropDownMenuItem Header="Actual Finish" Click="FilterDiscrepancy_Finish_Click"/>
                        <syncfusion:DropDownMenuItem Header="MHs" Click="FilterDiscrepancy_MHs_Click"/>
                        <syncfusion:DropDownMenuItem Header="% Complete" Click="FilterDiscrepancy_Percent_Click"/>
                    </syncfusion:DropDownMenuGroup>
                </syncfusion:DropDownButtonAdv>

                <ToggleButton x:Name="btnFilterRequiredFields"
                             Content="{Binding RequiredFieldsButtonText}"
                             IsChecked="{Binding FilterRequiredFields, Mode=TwoWay}"
                             Style="{StaticResource ActionFilterToggleStyle}"
                             Width="130"
                             Margin="0,0,20,0"
                             ToolTip="Show activities missing required field values"/>
                <Button x:Name="btnRefresh"
                        Content="Refresh"
                        Width="80"
                        Height="32"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderBrush="{StaticResource ControlBorder}"
                        BorderThickness="1"
                        FontSize="11"
                        Click="btnRefresh_Click"
                        Margin="0,0,5,0"
                        Focusable="False"
                        ToolTip="Reload schedule data and clear all filters">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackground}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ControlPressedBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btnClearFilters"
                        Content="Clear Filters"
                        Width="90"
                        Height="32"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderBrush="{StaticResource ControlBorder}"
                        BorderThickness="1"
                        FontSize="11"
                        Click="btnClearFilters_Click"
                        Margin="0,0,5,0"
                        Focusable="False"
                        ToolTip="Clear all active filters">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackground}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ControlPressedBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btnSave"
                        Content="SAVE"
                        Width="80"
                        Height="32"
                        BorderThickness="1"
                        FontSize="11"
                        Click="btnSave_Click"
                        Margin="0,0,5,0"
                        ToolTip="Save all pending changes to database">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackground}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlPressedBackground}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasUnsavedChanges}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource StatusRed}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource StatusRed}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- GRIDS CONTAINER (Master + Splitter + Detail) -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="MasterGridRow" Height="2*" MinHeight="100"/>
                <RowDefinition Height="6"/>
                <RowDefinition x:Name="DetailGridRow" Height="*" MinHeight="80"/>
            </Grid.RowDefinitions>

            <!-- MASTER GRID -->
            <syncfusion:SfDataGrid x:Name="sfScheduleMaster"
                          Grid.Row="0"
                          ItemsSource="{Binding MasterRows}"
                          AutoGenerateColumns="False"
                          AllowEditing="True"
                          EditTrigger="OnTap"
                          ColumnSizer="Star"
                          SelectionMode="Single"
                          SelectionUnit="Cell"
                          GridLinesVisibility="Both"
                          HeaderRowHeight="35"
                          RowHeight="30"
                          AllowSorting="True"
                          AllowFiltering="True"
                          AllowResizingColumns="True"
                          AllowDraggingColumns="True"
                          ShowRowHeader="True"
                          RowHeaderWidth="30"
                          CurrentCellBeginEdit="SfScheduleMaster_CurrentCellBeginEdit"
                          PreviewMouseWheel="SfScheduleMaster_PreviewMouseWheel">

                <syncfusion:SfDataGrid.Resources>
                    <Style TargetType="syncfusion:GridHeaderCellControl">
                        <Setter Property="Background" Value="{StaticResource GridHeaderBackground}"/>
                        <Setter Property="Foreground" Value="{StaticResource GridHeaderForeground}"/>
                        <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
                        <Setter Property="Padding" Value="4,0,4,0"/>
                    </Style>
                    <Style TargetType="syncfusion:FilterToggleButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="syncfusion:FilterToggleButton">
                                    <Grid SnapsToDevicePixels="True" Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="FilterStates">
                                                <VisualState x:Name="Filtered">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="{StaticResource FilterIconActiveColor}"
                                                                        Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="UnFiltered">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                        Storyboard.TargetProperty="Color"
                                                                        To="{StaticResource FilterIconColor}"
                                                                        Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Path Data="M 1,2 L 11,2 L 7,6 L 7,10 L 5,10 L 5,6 Z"
                                              Stretch="Uniform" Width="10" Height="10"
                                              StrokeThickness="1.2" Fill="Transparent" Margin="3">
                                            <Path.Stroke>
                                                <SolidColorBrush x:Name="IconStroke" Color="{StaticResource FilterIconColor}"/>
                                            </Path.Stroke>
                                        </Path>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </syncfusion:SfDataGrid.Resources>

                <syncfusion:SfDataGrid.Columns>

                    <syncfusion:GridTextColumn MappingName="SchedActNO"
                                              HeaderText="SchedActNO"
                                              Width="120"
                                              AllowEditing="False"/>
                    <syncfusion:GridTextColumn MappingName="MissedStartReason" 
                                              HeaderText="Missed Start Reason" 
                                              Width="200"
                                              AllowEditing="True"
                                              CellStyle="{StaticResource MissedStartReasonRequiredStyle}"/>

                    <syncfusion:GridTextColumn MappingName="MissedFinishReason" 
                                                HeaderText="Missed Finish Reason" 
                                                Width="200"
                                                AllowEditing="True"
                                                CellStyle="{StaticResource MissedFinishReasonRequiredStyle}"/>

                    <syncfusion:GridDateTimeColumn MappingName="ThreeWeekStart" 
                                                  HeaderText="3WLA Start" 
                                                  Width="110"
                                                  AllowEditing="True"
                                                  AllowNullValue="True"
                                                  NullText=""
                                                  Pattern="ShortDate"
                                                  CellStyle="{StaticResource ThreeWeekStartRequiredStyle}"/>

                    <syncfusion:GridDateTimeColumn MappingName="ThreeWeekFinish" 
                                                  HeaderText="3WLA Finish" 
                                                  Width="110"
                                                  AllowEditing="True"
                                                  AllowNullValue="True"
                                                  NullText=""
                                                  Pattern="ShortDate"
                                                  CellStyle="{StaticResource ThreeWeekFinishRequiredStyle}"/>
                    <syncfusion:GridDateTimeColumn MappingName="MS_ActualStart" 
                                                  HeaderText="MS Start" 
                                                  Width="110"
                                                  DisplayBinding="{Binding MS_ActualStart, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"
                                                  CellStyle="{StaticResource MSStartVarianceStyle}"/>

                    <syncfusion:GridDateTimeColumn MappingName="MS_ActualFinish" 
                                                  HeaderText="MS Finish" 
                                                  Width="110"
                                                  DisplayBinding="{Binding MS_ActualFinish, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"
                                                  CellStyle="{StaticResource MSFinishVarianceStyle}"/>

                    <syncfusion:GridTextColumn MappingName="Description" 
                                              HeaderText="Description" 
                                              Width="250"
                                              AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_Start"
                                                  HeaderText="P6 Start"
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_Start, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_Finish"
                                                  HeaderText="P6 Finish"
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_Finish, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_ActualStart" 
                                                  HeaderText="P6 Actual Start" 
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_ActualStart, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridDateTimeColumn MappingName="P6_ActualFinish" 
                                                  HeaderText="P6 Actual Finish" 
                                                  Width="130"
                                                  DisplayBinding="{Binding P6_ActualFinish, StringFormat='yyyy-MM-dd'}"
                                                  AllowEditing="False"/>

                    <syncfusion:GridNumericColumn MappingName="P6_PercentComplete" 
                                                 HeaderText="P6 %" 
                                                 Width="80"
                                                 NumberDecimalDigits="1"
                                                 AllowEditing="False"/>

                    <syncfusion:GridNumericColumn MappingName="P6_BudgetMHs" 
                                                 HeaderText="P6 MHs" 
                                                 Width="90"
                                                 NumberDecimalDigits="1"
                                                 AllowEditing="False"/>

                    <syncfusion:GridNumericColumn MappingName="MS_PercentComplete"
                                                 HeaderText="MS %"
                                                 Width="80"
                                                 NumberDecimalDigits="1"
                                                 AllowEditing="False"
                                                 CellStyle="{StaticResource MSPercentCompleteVarianceStyle}"/>

                    <syncfusion:GridNumericColumn MappingName="MS_BudgetMHs" 
                                                 HeaderText="MS MHs" 
                                                 Width="90"
                                                 NumberDecimalDigits="1"
                                                 AllowEditing="False"
                                                 CellStyle="{StaticResource MSBudgetMHsVarianceStyle}"/>
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>

            <!-- GRID SPLITTER -->
            <GridSplitter x:Name="gridSplitter"
                         Grid.Row="1"
                         Height="6"
                         ResizeDirection="Rows"
                         ResizeBehavior="PreviousAndNext"
                         Style="{StaticResource HorizontalGridSplitterStyle}"
                         ToolTip="Drag to resize grids"/>

            <!-- DETAIL GRID (Child ProgressSnapshots) -->
            <Border Grid.Row="2"
                    BorderBrush="{StaticResource ControlBorder}"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Grid Header -->
                    <Border Grid.Row="0"
                            Background="{StaticResource ToolbarBackground}"
                            Padding="10,5">
                        <TextBlock x:Name="txtDetailHeader"
                                  Text="Select a row above to view detail activities"
                                  Foreground="{StaticResource ForegroundColor}"
                                  FontSize="12"
                                  FontWeight="SemiBold"/>
                    </Border>

                    <!-- Detail Grid -->
                    <syncfusion:SfDataGrid x:Name="sfScheduleDetail"
                                  Grid.Row="1"
                                  ItemsSource="{Binding DetailActivities}"
                                  AutoGenerateColumns="False"
                                  AllowEditing="True"
                                  EditTrigger="OnTap"
                                  ColumnSizer="Star"
                                  SelectionMode="Single"
                                  SelectionUnit="Cell"
                                  GridLinesVisibility="Both"
                                  HeaderRowHeight="32"
                                  RowHeight="28"
                                  AllowSorting="True"
                                  AllowFiltering="True"
                                  AllowResizingColumns="True"
                                  AllowDraggingColumns="True"
                                  ShowRowHeader="True"
                                  RowHeaderWidth="25">

                        <syncfusion:SfDataGrid.Resources>
                            <Style TargetType="syncfusion:GridHeaderCellControl">
                                <Setter Property="Background" Value="{StaticResource GridHeaderBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource GridHeaderForeground}"/>
                                <Setter Property="BorderThickness" Value="0,0,0.5,0.5"/>
                                <Setter Property="Padding" Value="4,0,4,0"/>
                            </Style>
                            <Style TargetType="syncfusion:FilterToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="syncfusion:FilterToggleButton">
                                            <Grid SnapsToDevicePixels="True" Background="Transparent">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="FilterStates">
                                                        <VisualState x:Name="Filtered">
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                                Storyboard.TargetProperty="Color"
                                                                                To="{StaticResource FilterIconActiveColor}"
                                                                                Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="UnFiltered">
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                                Storyboard.TargetProperty="Color"
                                                                                To="{StaticResource FilterIconColor}"
                                                                                Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <Path Data="M 1,2 L 11,2 L 7,6 L 7,10 L 5,10 L 5,6 Z"
                                                      Stretch="Uniform" Width="10" Height="10"
                                                      StrokeThickness="1.2" Fill="Transparent" Margin="3">
                                                    <Path.Stroke>
                                                        <SolidColorBrush x:Name="IconStroke" Color="{StaticResource FilterIconColor}"/>
                                                    </Path.Stroke>
                                                </Path>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </syncfusion:SfDataGrid.Resources>

                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn MappingName="UniqueID" 
                                                      HeaderText="UniqueID" 
                                                      Width="150"
                                                      AllowEditing="False"/>
                            <syncfusion:GridTextColumn MappingName="SchedActNO" 
                                                      HeaderText="SchedActNO" 
                                                      Width="130"
                                                      AllowEditing="False"/>

                            <syncfusion:GridTextColumn MappingName="Description" 
                                                      HeaderText="Description" 
                                                      Width="200"
                                                      AllowEditing="False"/>

                            <syncfusion:GridNumericColumn MappingName="PercentEntry" 
                                                         HeaderText="%" 
                                                         Width="70"
                                                         NumberDecimalDigits="1"
                                                         AllowEditing="True"/>

                            <syncfusion:GridNumericColumn MappingName="BudgetMHs" 
                                                         HeaderText="Budget MHs" 
                                                         Width="100"
                                                         NumberDecimalDigits="1"
                                                         AllowEditing="True"/>

                            <syncfusion:GridDateTimeColumn MappingName="SchStart" 
                                                          HeaderText="Start" 
                                                          Width="110"
                                                          AllowEditing="True"
                                                          AllowNullValue="True"
                                                          NullText=""
                                                          Pattern="ShortDate"/>

                            <syncfusion:GridDateTimeColumn MappingName="SchFinish" 
                                                          HeaderText="Finish" 
                                                          Width="110"
                                                          AllowEditing="True"
                                                          AllowNullValue="True"
                                                          NullText=""
                                                          Pattern="ShortDate"/>

                            <syncfusion:GridTextColumn MappingName="AssignedTo" 
                                                      HeaderText="Assigned To" 
                                                      Width="120"
                                                      AllowEditing="False"/>
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <Border Grid.Row="2"
                Background="{StaticResource ToolbarBackground}"
                BorderBrush="{StaticResource ControlBorder}"
                BorderThickness="0,1,0,0"
                Height="30">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="15,0">
                    <TextBlock x:Name="txtStatus"
                              Text="Ready"
                              Foreground="{StaticResource ForegroundColor}"
                              FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="15,0">
                    <Rectangle Width="14" Height="14" Fill="{StaticResource StatusRedBg}" Margin="0,0,5,0"/>
                    <TextBlock Text="Required" 
                              Foreground="{StaticResource ForegroundColor}" 
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Rectangle Width="14" Height="14" Fill="{StaticResource StatusYellow}" Margin="0,0,5,0"/>
                    <TextBlock Text="P6 vs MS Discrepancies" 
                              Foreground="{StaticResource ForegroundColor}" 
                              FontSize="11"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- LOADING OVERLAY -->
        <Grid Grid.Row="1"
              Background="{StaticResource OverlayBackground}"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <syncfusion:SfBusyIndicator IsBusy="True"
                                           AnimationType="DualRing"
                                           ViewboxWidth="80"
                                           ViewboxHeight="80"
                                           Foreground="{StaticResource AccentColor}"/>
                <TextBlock Text="Loading schedule data..."
                          FontSize="16"
                          Foreground="{StaticResource OverlayText}"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>