<Window x:Class="VANTAGE.Views.TemplateTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Template Type"
        Height="300"
        Width="350"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Select the type of form template to create:"
                   Foreground="{StaticResource ForegroundColor}"
                   FontSize="13"/>

        <!-- Type buttons -->
        <StackPanel Grid.Row="2" VerticalAlignment="Top">
            <Button Content="Cover - Title page with image"
                    Height="32"
                    Margin="0,0,0,8"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ControlBorder}"
                    HorizontalContentAlignment="Left"
                    Padding="12,0"
                    Click="BtnCover_Click"
                    ToolTip="Creates a cover page template with title, image, and footer"/>

            <Button Content="List - Bulleted text items"
                    Height="32"
                    Margin="0,0,0,8"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ControlBorder}"
                    HorizontalContentAlignment="Left"
                    Padding="12,0"
                    Click="BtnList_Click"
                    ToolTip="Creates a list template with title and text items"/>

            <Button Content="Grid - Empty rows for data entry"
                    Height="32"
                    Margin="0,0,0,8"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ControlBorder}"
                    HorizontalContentAlignment="Left"
                    Padding="12,0"
                    Click="BtnGrid_Click"
                    ToolTip="Creates a grid template with columns and empty rows"/>

            <Button Content="Form - Sections with labeled items"
                    Height="32"
                    Margin="0,0,0,8"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ControlBorder}"
                    HorizontalContentAlignment="Left"
                    Padding="12,0"
                    Click="BtnForm_Click"
                    ToolTip="Creates a form template with sections and items"/>
        </StackPanel>

        <!-- Cancel button -->
        <Button Grid.Row="4"
                Content="Cancel"
                Width="80"
                Height="32"
                HorizontalAlignment="Right"
                Background="{StaticResource ControlBackground}"
                Foreground="{StaticResource ForegroundColor}"
                BorderBrush="{StaticResource ControlBorder}"
                IsCancel="True"/>
    </Grid>
</Window>
