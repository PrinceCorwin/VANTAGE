<UserControl x:Class="VANTAGE.Controls.ColumnFilterPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250"
             Background="{StaticResource ControlBackground}"
             BorderBrush="{StaticResource BorderColor}"
             BorderThickness="1">
    <StackPanel Margin="5">

        <!-- Filter Options -->
        <TextBlock Text="Filter Options" 
                   Foreground="{StaticResource ForegroundColor}"
                   FontWeight="Bold"
                   Margin="0,5,0,5"/>

        <ComboBox x:Name="cmbFilterType"
                  Height="30"
                  Margin="0,2"
                  Background="{StaticResource ControlBackground}"
                  Foreground="{StaticResource ForegroundColor}"
                  BorderBrush="{StaticResource BorderColor}">
            <ComboBoxItem Content="Equals" IsSelected="True"/>
            <ComboBoxItem Content="Does Not Equal"/>
            <ComboBoxItem Content="Contains"/>
            <ComboBoxItem Content="Does Not Contain"/>
            <ComboBoxItem Content="Begins With"/>
            <ComboBoxItem Content="Ends With"/>
        </ComboBox>

        <TextBox x:Name="txtFilterValue"
                 Height="30"
                 Margin="0,5"
                 Padding="5"
                 Background="{StaticResource ControlBackground}"
                 Foreground="{StaticResource ForegroundColor}"
                 BorderBrush="{StaticResource BorderColor}"/>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Clear" 
                    Width="60"
                    Height="30"
                    Margin="0,0,5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    Click="Clear_Click"/>

            <Button Content="Apply" 
                    Width="60"
                    Height="30"
                    Background="{StaticResource AccentColor}"
                    Foreground="{StaticResource ForegroundColor}"
                    Click="Apply_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>