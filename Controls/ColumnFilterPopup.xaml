<UserControl x:Class="VANTAGE.Controls.ColumnFilterPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250"
             Background="{StaticResource ControlBackground}"
             BorderBrush="{StaticResource BorderColor}"
             BorderThickness="1">
    <StackPanel Margin="5">

        <!-- Filter Options -->
        <TextBlock Text="Filter Options" 
                   Foreground="{StaticResource ForegroundColor}"
                   FontWeight="Bold"
                   Margin="0,5,0,5"/>

        <!-- Filter Type Selector -->
        <Border Background="{StaticResource ControlBackground}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="1"
        Margin="0,2">
            <ListBox x:Name="lstFilterType"
             Height="120"
             Background="{StaticResource ControlBackground}"
             Foreground="{StaticResource ForegroundColor}"
             BorderThickness="0"
             SelectedIndex="0"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBoxItem Content="Equals" Foreground="{StaticResource ForegroundColor}"/>
                <ListBoxItem Content="Does Not Equal" Foreground="{StaticResource ForegroundColor}"/>
                <ListBoxItem Content="Contains" Foreground="{StaticResource ForegroundColor}"/>
                <ListBoxItem Content="Does Not Contain" Foreground="{StaticResource ForegroundColor}"/>
                <ListBoxItem Content="Begins With" Foreground="{StaticResource ForegroundColor}"/>
                <ListBoxItem Content="Ends With" Foreground="{StaticResource ForegroundColor}"/>
            </ListBox>
        </Border>

        <TextBox x:Name="txtFilterValue"
                 Height="30"
                 Margin="0,5"
                 Padding="5"
                 Background="{StaticResource ControlBackground}"
                 Foreground="{StaticResource ForegroundColor}"
                 BorderBrush="{StaticResource BorderColor}"/>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Clear" 
                    Width="60"
                    Height="30"
                    Margin="0,0,5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    Click="Clear_Click"/>

            <Button Content="Apply" 
                    Width="60"
                    Height="30"
                    Background="{StaticResource AccentColor}"
                    Foreground="{StaticResource ForegroundColor}"
                    Click="Apply_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>