<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="VANTAGE.Controls.TextFilterPopup"
			 MinWidth="300"
             Background="{StaticResource ControlBackground}"
             BorderBrush="{StaticResource BorderColor}"
             BorderThickness="1"
             Foreground="{StaticResource ForegroundColor}">
	<StackPanel Margin="6,6,6,6">
		<TextBlock Text="Text Filters" FontWeight="Bold"/>

        <ListBox x:Name="lstFilterType" Margin="0,6,0,6" SelectedIndex="0" Foreground="{StaticResource ForegroundColor}" Background="{StaticResource ControlBackground}" BorderThickness="0">
			<ListBoxItem Content="Equals"/>
			<ListBoxItem Content="Does Not Equal"/>
			<ListBoxItem Content="Contains"/>
			<ListBoxItem Content="Does Not Contain"/>
			<ListBoxItem Content="Begins With"/>
			<ListBoxItem Content="Ends With"/>
		</ListBox>

		<TextBox x:Name="txtFilterValue" Height="30" Padding="6" Foreground="{StaticResource ForegroundColor}" Background="{StaticResource ControlBackground}" BorderBrush="{StaticResource BorderColor}"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
			<Button Content="Cancel" Width="70" Height="30" Margin="0,0,8,0" Click="Cancel_Click"/>
			<Button Content="Apply" Width="70" Height="30" Background="{StaticResource AccentColor}" Foreground="{StaticResource ForegroundColor}" Click="Apply_Click"/>
		</StackPanel>
	</StackPanel>
</UserControl>