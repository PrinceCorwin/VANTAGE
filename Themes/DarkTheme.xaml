
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- === FONT SETTINGS === -->
    <FontFamily x:Key="FontFamilyPrimary">Segoe UI</FontFamily>
    <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Key="FontSizeNormal">14</sys:Double>

    <!-- === COLOR PALETTE === -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="DarkBackgroundColor" Color="#000000EF"/>
    <SolidColorBrush x:Key="DarkestBackgroundColor" Color="#161616"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="#E8EAED"/>
    <SolidColorBrush x:Key="TextColorSecondary" Color="#FFB0B0B0"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FF0078D7"/>
    <SolidColorBrush x:Key="BorderColor" Color="black"/>
    <SolidColorBrush x:Key="DisabledColor" Color="#FF6A6A6A"/>

    <!-- === WINDOW ELEMENTS === -->
    <SolidColorBrush x:Key="WindowBackground" Color="#FF1C1C1C"/>
    <SolidColorBrush x:Key="ControlBackground" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="ControlBackgroundGreen" Color="#012a00"/>
    <SolidColorBrush x:Key="ControlBackgroundRed" Color="#2a0000"/>
    <SolidColorBrush x:Key="ControlForeground" Color="#E8EAED"/>
    <SolidColorBrush x:Key="ControlBorder" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="ControlHoverBackground" Color="#FF333333"/>
    <SolidColorBrush x:Key="ControlPressedBackground" Color="#FF2A2A2C"/>

    <!-- === DATAGRID COLORS === -->
    <SolidColorBrush x:Key="GridHeaderBackground" Color="#002234"/>

    <!-- === STATUS COLORS === -->
    <SolidColorBrush x:Key="StatusGreen" Color="#FF27AE60"/>
    <SolidColorBrush x:Key="StatusYellow" Color="#5b4b26"/>
    <SolidColorBrush x:Key="StatusYellowBg" Color="#5b4b26"/>
    <SolidColorBrush x:Key="StatusRed" Color="#b63434"/>
    <SolidColorBrush x:Key="StatusRedBg" Color="#5b2626"/>
    <SolidColorBrush x:Key="StatusGoldBg" Color="#4d4a00"/>
    <SolidColorBrush x:Key="StatusInProgress" Color="#FF3498DB"/>
    <SolidColorBrush x:Key="StatusNotStarted" Color="#FF95A5A6"/>

    <!-- === ACTIVE FILTER BORDER === -->
    <SolidColorBrush x:Key="ActiveFilterBorderColor" Color="#FF27AE60"/>

    <!-- === TOOLBAR COLORS === -->
    <SolidColorBrush x:Key="ToolbarBackground" Color="#FF252525"/>

    <!-- === STATUSBAR COLORS === -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="#FF1C1C1C"/>
    <SolidColorBrush x:Key="StatusBarForeground" Color="#FFB0B0B0"/>

    <!-- === NON-OWNED RECORDS COLORS === -->
    <SolidColorBrush x:Key="NotOwnedRowBackground" Color="#000723"/>
    <SolidColorBrush x:Key="NotOwnedRowForeground" Color="#336e9c"/>

    <!-- === ACTION BUTTON COLORS === -->
    <!-- Green buttons: Add, Submit, Save, Restore -->
    <SolidColorBrush x:Key="ButtonSuccessBackground" Color="#2D7D46"/>
    <SolidColorBrush x:Key="ButtonSuccessBorder" Color="#2D7D46"/>
    <SolidColorBrush x:Key="ButtonSuccessHover" Color="#359954"/>

    <!-- Red buttons: Delete, Remove, Destructive actions -->
    <SolidColorBrush x:Key="ButtonDangerBackground" Color="#B33A3A"/>
    <SolidColorBrush x:Key="ButtonDangerBorder" Color="#B33A3A"/>
    <SolidColorBrush x:Key="ButtonDangerHover" Color="#CC4444"/>

    <!-- Blue buttons: Primary actions -->
    <SolidColorBrush x:Key="ButtonPrimaryBackground" Color="#0078D7"/>
    <SolidColorBrush x:Key="ButtonPrimaryBorder" Color="#0078D7"/>
    <SolidColorBrush x:Key="ButtonPrimaryHover" Color="#1A8BE0"/>

    <!-- === OVERLAY COLORS === -->
    <SolidColorBrush x:Key="OverlayBackground" Color="#DD000000"/>
    <SolidColorBrush x:Key="OverlayText" Color="White"/>
    <SolidColorBrush x:Key="OverlayTextSecondary" Color="#CCCCCC"/>
    <!-- Note: TrackColor on SfLinearProgressBar doesn't accept resource binding -->

    <!-- === ERROR/WARNING COLORS === -->
    <SolidColorBrush x:Key="ErrorText" Color="#FFE74C3C"/>
    <SolidColorBrush x:Key="WarningText" Color="#FFFFC107"/>
    <SolidColorBrush x:Key="WarningHighlight" Color="#FFFF6B6B"/>

    <!-- === ANALYSIS MODULE COLORS (% Complete ranges) === -->
    <SolidColorBrush x:Key="AnalysisRedBg" Color="#FFB33A3A"/>       <!-- 0-25% -->
    <SolidColorBrush x:Key="AnalysisOrangeBg" Color="#FFCC7000"/>    <!-- >25-50% -->
    <SolidColorBrush x:Key="AnalysisYellowBg" Color="#FFB8A000"/>    <!-- >50-75% -->
    <SolidColorBrush x:Key="AnalysisGreenBg" Color="#FF2D7D46"/>     <!-- >75-100% -->
    <SolidColorBrush x:Key="WarningHighlightBackground" Color="#44FF6B6B"/>

    <!-- === UI ELEMENT COLORS === -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#FF252526"/>
    <SolidColorBrush x:Key="SidebarBorder" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="DividerColor" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="SplitterDots" Color="#666666"/>
    <SolidColorBrush x:Key="DisabledText" Color="#FF888888"/>

    <!-- === TOOLBAR BUTTON COLORS === -->
    <SolidColorBrush x:Key="ToolbarForeground" Color="#E8EAED"/>
    <SolidColorBrush x:Key="ToolbarHoverBackground" Color="#FF333333"/>
    <SolidColorBrush x:Key="ToolbarHoverForeground" Color="#FFFFFF"/>

    <!-- === GRID HEADER COLORS === -->
    <SolidColorBrush x:Key="GridHeaderForeground" Color="#FFB0B0B0"/>
    <Color x:Key="FilterIconColor">#FF808080</Color>
    <Color x:Key="FilterIconActiveColor">#FFFF4444</Color>

    <!-- === ACTION BUTTON COLORS === -->
    <SolidColorBrush x:Key="ActionButtonForeground" Color="#E8EAED"/>

    <!-- ========================================= -->
    <!-- === DEFAULT BUTTON STYLE === -->
    <!-- ========================================= -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyPrimary}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Focusable="False"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackground}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ControlBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource DisabledColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================= -->
    <!-- === TOOLBAR BUTTON STYLE === -->
    <!-- ========================================= -->
    <Style x:Key="ToolbarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ToolbarForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyPrimary}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Focusable="False"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ToolbarHoverBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource ToolbarHoverForeground}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource DisabledColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
