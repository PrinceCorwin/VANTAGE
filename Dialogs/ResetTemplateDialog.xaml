<Window x:Class="VANTAGE.Dialogs.ResetTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset to Defaults"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20,20,20,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock x:Name="txtPrompt"
                   Grid.Row="0"
                   Text="Select a built-in template to reset to:"
                   Foreground="{StaticResource ForegroundColor}"
                   FontSize="13"
                   TextWrapping="Wrap"/>

        <!-- ComboBox for template selection -->
        <ComboBox x:Name="cboTemplates"
                  Grid.Row="2"
                  Height="35"
                  FontSize="14"
                  Padding="10,8,10,8"
                  Background="{StaticResource ControlBackground}"
                  Foreground="{StaticResource ControlForeground}"
                  BorderBrush="{StaticResource ControlBorder}"
                  BorderThickness="1"
                  DisplayMemberPath="TemplateName"
                  VerticalContentAlignment="Center"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ControlBorder}"
                    BorderThickness="1"
                    IsCancel="True"/>

            <Button Content="OK"
                    Width="80"
                    Height="35"
                    Background="{StaticResource AccentColor}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="1"
                    IsDefault="True"
                    Click="BtnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>
