<Window x:Class="VANTAGE.Dialogs.ManageProgressLogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:busy="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
        Title="Admin: Manage Progress Log Uploads"
        Height="550"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="700"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Manage Progress Log Uploads"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{DynamicResource ForegroundColor}"/>
            <TextBlock Text="View and delete batches uploaded to VANTAGE_global_ProgressLog. Use REFRESH to import legacy uploads."
                       Foreground="{DynamicResource ForegroundColor}"
                       Opacity="0.6"
                       FontSize="12"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Uploads Grid -->
        <Border Grid.Row="2"
                Background="{DynamicResource ControlBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4">
            <Grid>
                <syncfusion:SfDataGrid x:Name="sfUploads"
                                       AutoGenerateColumns="False"
                                       AllowEditing="True"
                                       AllowFiltering="True"
                                       AllowSorting="True"
                                       AllowResizingColumns="True"
                                       ColumnSizer="Auto"
                                       SelectionMode="Extended"
                                       ShowRowHeader="False"
                                       GridLinesVisibility="Horizontal"
                                       HeaderRowHeight="32"
                                       RowHeight="28"
                                       Background="Transparent"
                                       BorderThickness="0">
                    <syncfusion:SfDataGrid.Columns>
                        <syncfusion:GridCheckBoxColumn MappingName="IsSelected"
                                                       HeaderText=""
                                                       Width="40"
                                                       AllowFiltering="False"
                                                       AllowSorting="False"/>
                        <syncfusion:GridTextColumn MappingName="Username"
                                                   HeaderText="Username"
                                                   Width="110"
                                                   AllowEditing="False"/>
                        <syncfusion:GridTextColumn MappingName="ProjectID"
                                                   HeaderText="Project ID"
                                                   Width="130"
                                                   AllowEditing="False"/>
                        <syncfusion:GridTextColumn MappingName="WeekEndDateDisplay"
                                                   HeaderText="Week Ending"
                                                   Width="110"
                                                   AllowEditing="False"/>
                        <syncfusion:GridTextColumn MappingName="UploadUtcDateDisplay"
                                                   HeaderText="Uploaded"
                                                   Width="150"
                                                   AllowEditing="False"/>
                        <syncfusion:GridNumericColumn MappingName="RecordCount"
                                                      HeaderText="Records"
                                                      Width="80"
                                                      NumberDecimalDigits="0"
                                                      AllowEditing="False"/>
                        <syncfusion:GridTextColumn MappingName="UploadedBy"
                                                   HeaderText="Uploaded By"
                                                   Width="110"
                                                   AllowEditing="False"/>
                    </syncfusion:SfDataGrid.Columns>
                </syncfusion:SfDataGrid>

                <!-- No Uploads Message -->
                <TextBlock x:Name="txtNoUploads"
                           Text="No upload records found. Use REFRESH to import legacy uploads."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource ForegroundColor}"
                           Opacity="0.6"
                           Visibility="Collapsed"/>

                <!-- Loading State -->
                <StackPanel x:Name="pnlLoading"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="Loading upload records..."
                               Foreground="{DynamicResource ForegroundColor}"
                               Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Selection Summary and Buttons -->
        <DockPanel Grid.Row="3" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="btnSelectAll"
                        Content="Select All"
                        Width="80"
                        Height="28"
                        Margin="0,0,10,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ForegroundColor}"
                        BorderBrush="{DynamicResource ControlBorder}"
                        BorderThickness="1"
                        ToolTip="Select all upload batches"
                        Click="BtnSelectAll_Click"/>
                <Button x:Name="btnSelectNone"
                        Content="Select None"
                        Width="80"
                        Height="28"
                        Margin="0,0,20,0"
                        Background="{DynamicResource ControlBackground}"
                        Foreground="{DynamicResource ForegroundColor}"
                        BorderBrush="{DynamicResource ControlBorder}"
                        BorderThickness="1"
                        ToolTip="Deselect all upload batches"
                        Click="BtnSelectNone_Click"/>

                <!-- REFRESH Dropdown -->
                <syncfusion:DropDownButtonAdv x:Name="btnRefresh"
                                              Label="REFRESH"
                                              SmallIcon="{x:Null}"
                                              Height="28"
                                              Padding="10,0"
                                              Background="{DynamicResource ControlBackground}"
                                              Foreground="{DynamicResource ForegroundColor}"
                                              BorderBrush="{DynamicResource ControlBorder}"
                                              BorderThickness="1"
                                              ToolTip="Import legacy uploads from VANTAGE_global_ProgressLog">
                    <syncfusion:DropDownMenuGroup>
                        <syncfusion:DropDownMenuItem Header="Last 7 days" Click="MenuRefresh7Days_Click"
                                                     ToolTip="Scan for uploads from the last 7 days"/>
                        <syncfusion:DropDownMenuItem Header="Last 30 days" Click="MenuRefresh30Days_Click"
                                                     ToolTip="Scan for uploads from the last 30 days"/>
                        <Separator Background="{DynamicResource BorderColor}" Margin="5,2"/>
                        <syncfusion:DropDownMenuItem Header="All time" Click="MenuRefreshAll_Click"
                                                     ToolTip="Scan all uploads (may take longer)"/>
                    </syncfusion:DropDownMenuGroup>
                </syncfusion:DropDownButtonAdv>
            </StackPanel>
            <TextBlock x:Name="txtSelectionSummary"
                       Text="0 batch(es) selected (0 records)"
                       Foreground="{DynamicResource ForegroundColor}"
                       Opacity="0.7"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                    Content="Close"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{DynamicResource ControlBackground}"
                    Foreground="{DynamicResource ForegroundColor}"
                    BorderBrush="{DynamicResource ControlBorder}"
                    BorderThickness="1"
                    ToolTip="Close this dialog"
                    Click="BtnCancel_Click"/>
            <Button x:Name="btnDelete"
                    Content="Delete Selected"
                    Width="120"
                    Height="35"
                    Background="{DynamicResource ButtonDangerBackground}"
                    Foreground="{DynamicResource ForegroundColor}"
                    BorderBrush="{DynamicResource ButtonDangerBorder}"
                    BorderThickness="1"
                    IsEnabled="False"
                    ToolTip="Delete selected batches from VANTAGE_global_ProgressLog"
                    Click="BtnDelete_Click"/>
        </StackPanel>

        <!-- Loading Overlay for operations -->
        <Border x:Name="pnlOperationLoading"
                Grid.Row="0"
                Grid.RowSpan="6"
                Background="{DynamicResource OverlayBackground}"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <busy:SfBusyIndicator IsBusy="True"
                                      AnimationType="DoubleCircle"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Width="60"
                                      Height="60"/>
                <TextBlock x:Name="txtOperationStatus"
                           Text="Processing..."
                           Foreground="{DynamicResource ForegroundColor}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
