<Window x:Class="VANTAGE.Dialogs.P6ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export to P6"
        Height="340"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Week End Date (read-only) -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Week Ending Date" 
                      FontWeight="SemiBold" 
                      FontSize="14" 
                      Foreground="{DynamicResource ForegroundColor}"/>
            <TextBlock x:Name="txtWeekEndDate" 
                      Text="2025-01-01" 
                      Foreground="{DynamicResource ForegroundColor}" 
                      FontSize="14"
                      Margin="0,5,0,0"/>
            <TextBlock x:Name="txtRowCount" 
                      Text="0 activities will be exported" 
                      Foreground="{DynamicResource ForegroundColor}" 
                      Opacity="0.6"
                      FontSize="11"
                      Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Start Time -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Actual Start Time (applied to all start dates)" 
                      FontWeight="SemiBold" 
                      FontSize="14" 
                      Foreground="{DynamicResource ForegroundColor}"
                      Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cmbStartHour" 
                         Width="70" 
                         Height="32"
                         Margin="0,0,5,0"
                         Background="{DynamicResource ControlBackground}"
                         Foreground="{DynamicResource ControlForeground}"
                         BorderBrush="{DynamicResource ControlBorder}"
                         TextElement.Foreground="{DynamicResource ForegroundColor}">
                    <ComboBoxItem Content="0:00"/>
                    <ComboBoxItem Content="1:00"/>
                    <ComboBoxItem Content="2:00"/>
                    <ComboBoxItem Content="3:00"/>
                    <ComboBoxItem Content="4:00"/>
                    <ComboBoxItem Content="5:00"/>
                    <ComboBoxItem Content="6:00"/>
                    <ComboBoxItem Content="7:00"/>
                    <ComboBoxItem Content="8:00"/>
                    <ComboBoxItem Content="9:00"/>
                    <ComboBoxItem Content="10:00"/>
                    <ComboBoxItem Content="11:00"/>
                    <ComboBoxItem Content="12:00"/>
                    <ComboBoxItem Content="13:00"/>
                    <ComboBoxItem Content="14:00"/>
                    <ComboBoxItem Content="15:00"/>
                    <ComboBoxItem Content="16:00"/>
                    <ComboBoxItem Content="17:00"/>
                    <ComboBoxItem Content="18:00"/>
                    <ComboBoxItem Content="19:00"/>
                    <ComboBoxItem Content="20:00"/>
                    <ComboBoxItem Content="21:00"/>
                    <ComboBoxItem Content="22:00"/>
                    <ComboBoxItem Content="23:00"/>
                </ComboBox>
                <ComboBox x:Name="cmbStartMinute" 
                         Width="55"
                         Height="32"
                         Background="{DynamicResource ControlBackground}"
                         Foreground="{DynamicResource ControlForeground}"
                         BorderBrush="{DynamicResource ControlBorder}"
                         TextElement.Foreground="{DynamicResource ForegroundColor}">
                    <ComboBoxItem Content=":00"/>
                    <ComboBoxItem Content=":15"/>
                    <ComboBoxItem Content=":30"/>
                    <ComboBoxItem Content=":45"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Finish Time -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="Actual Finish Time (applied to all finish dates)" 
                      FontWeight="SemiBold" 
                      FontSize="14" 
                      Foreground="{DynamicResource ForegroundColor}"
                      Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cmbFinishHour" 
                         Width="70" 
                         Height="32"
                         Margin="0,0,5,0"
                         Background="{DynamicResource ControlBackground}"
                         Foreground="{DynamicResource ControlForeground}"
                         BorderBrush="{DynamicResource ControlBorder}"
                         TextElement.Foreground="{DynamicResource ForegroundColor}">
                    <ComboBoxItem Content="0:00"/>
                    <ComboBoxItem Content="1:00"/>
                    <ComboBoxItem Content="2:00"/>
                    <ComboBoxItem Content="3:00"/>
                    <ComboBoxItem Content="4:00"/>
                    <ComboBoxItem Content="5:00"/>
                    <ComboBoxItem Content="6:00"/>
                    <ComboBoxItem Content="7:00"/>
                    <ComboBoxItem Content="8:00"/>
                    <ComboBoxItem Content="9:00"/>
                    <ComboBoxItem Content="10:00"/>
                    <ComboBoxItem Content="11:00"/>
                    <ComboBoxItem Content="12:00"/>
                    <ComboBoxItem Content="13:00"/>
                    <ComboBoxItem Content="14:00"/>
                    <ComboBoxItem Content="15:00"/>
                    <ComboBoxItem Content="16:00"/>
                    <ComboBoxItem Content="17:00"/>
                    <ComboBoxItem Content="18:00"/>
                    <ComboBoxItem Content="19:00"/>
                    <ComboBoxItem Content="20:00"/>
                    <ComboBoxItem Content="21:00"/>
                    <ComboBoxItem Content="22:00"/>
                    <ComboBoxItem Content="23:00"/>
                </ComboBox>
                <ComboBox x:Name="cmbFinishMinute" 
                         Width="55"
                         Height="32"
                         Background="{DynamicResource ControlBackground}"
                         Foreground="{DynamicResource ControlForeground}"
                         BorderBrush="{DynamicResource ControlBorder}"
                         TextElement.Foreground="{DynamicResource ForegroundColor}">
                    <ComboBoxItem Content=":00"/>
                    <ComboBoxItem Content=":15"/>
                    <ComboBoxItem Content=":30"/>
                    <ComboBoxItem Content=":45"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                   Content="Cancel"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Background="{DynamicResource ControlBackground}"
                   Foreground="{DynamicResource ForegroundColor}"
                   BorderBrush="{DynamicResource ControlBorder}"
                   BorderThickness="1"
                   Click="BtnCancel_Click"/>
            <Button x:Name="btnExport"
                   Content="Export"
                   Width="100"
                   Height="35"
                   Background="{DynamicResource AccentColor}"
                   Foreground="{DynamicResource ForegroundColor}"
                   BorderBrush="{DynamicResource AccentColor}"
                   BorderThickness="1"
                   Click="BtnExport_Click"/>
        </StackPanel>
    </Grid>
</Window>