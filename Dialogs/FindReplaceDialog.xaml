<syncfusion:ChromelessWindow x:Class="VANTAGE.Dialogs.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Find and Replace"
        Width="500"
        Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource ContentBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Column Name Label -->
        <TextBlock Grid.Row="0"
                   x:Name="txtColumnName"
                   Text="Column: [Name]"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryForeground}"
                   Margin="0,0,0,15"/>

        <!-- Mode Checkboxes - mutually exclusive -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <CheckBox x:Name="chkReplaceAllCells"
                      Content="Replace ALL cells in column"
                      Foreground="{DynamicResource ContentForeground}"
                      Margin="0,0,0,8"
                      ToolTip="Replace every cell value in this column with the replacement text"
                      Checked="ChkReplaceAllCells_Changed"
                      Unchecked="ChkReplaceAllCells_Changed"/>
            <CheckBox x:Name="chkFindBlanks"
                      Content="Replace BLANK cells in column"
                      Foreground="{DynamicResource ContentForeground}"
                      ToolTip="Replace cells that are empty, null, or whitespace-only"
                      Checked="ChkFindBlanks_Changed"
                      Unchecked="ChkFindBlanks_Changed"/>
        </StackPanel>

        <!-- Find What -->
        <TextBlock Grid.Row="2"
                   x:Name="lblFindWhat"
                   Text="Find what:"
                   Foreground="{DynamicResource ContentForeground}"
                   Margin="0,0,0,5"/>
        <syncfusion:SfTextBoxExt Grid.Row="3"
                                 x:Name="txtFind"
                                 Height="32"
                                 Margin="0,0,0,12"
                                 Watermark="Enter text to find..."/>

        <!-- Replace With -->
        <TextBlock Grid.Row="4"
                   Text="Replace with:"
                   Foreground="{DynamicResource ContentForeground}"
                   Margin="0,0,0,5"/>
        <syncfusion:SfTextBoxExt Grid.Row="5"
                                 x:Name="txtReplace"
                                 Height="32"
                                 Margin="0,0,0,15"
                                 Watermark="Enter replacement text..."/>

        <!-- Options and Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Options -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <CheckBox x:Name="chkMatchCase"
                          Content="Match case"
                          Foreground="{DynamicResource ContentForeground}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="chkWholeCell"
                          Content="Match entire cell contents"
                          Foreground="{DynamicResource ContentForeground}"
                          IsChecked="True"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <syncfusion:ButtonAdv x:Name="btnCount"
                                      Label="Count"
                                      SmallIcon="{x:Null}"
                                      Width="120"
                                      Height="34"
                                      Margin="0,0,0,10"
                                      ToolTip="Count matching cells without replacing"
                                      Background="{DynamicResource ContentBackground}"
                                      Foreground="{DynamicResource ContentForeground}"
                                      Click="BtnCount_Click"/>
                <syncfusion:ButtonAdv x:Name="btnReplaceAll"
                                      Label="Replace All"
                                      SmallIcon="{x:Null}"
                                      Width="120"
                                      Height="34"
                                      Margin="0,0,0,10"
                                      Background="{DynamicResource PrimaryBackground}"
                                      Foreground="White"
                                      Click="BtnReplaceAll_Click"/>
                <syncfusion:ButtonAdv x:Name="btnClose"
                                      Label="Close"
                                      SmallIcon="{x:Null}"
                                      Width="120"
                                      Height="34"
                                      Background="{DynamicResource ContentBackground}"
                                      Foreground="{DynamicResource ContentForeground}"
                                      IsCancel="True"
                                      Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>