<syncfusion:ChromelessWindow x:Class="VANTAGE.Dialogs.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=FluentDark}"
        Title="Find and Replace"
        Width="500"
        Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource ContentBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Column Name Label -->
        <TextBlock Grid.Row="0"
                   x:Name="txtColumnName"
                   Text="Column: [Name]"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryForeground}"
                   Margin="0,0,0,15"/>

        <!-- Find What -->
        <TextBlock Grid.Row="1"
                   Text="Find what:"
                   Foreground="{DynamicResource ContentForeground}"
                   Margin="0,0,0,5"/>
        <syncfusion:SfTextBoxExt Grid.Row="2"
                                 x:Name="txtFind"
                                 Height="32"
                                 Margin="0,0,0,12"
                                 Watermark="Enter text to find..."/>

        <!-- Replace With -->
        <TextBlock Grid.Row="3"
                   Text="Replace with:"
                   Foreground="{DynamicResource ContentForeground}"
                   Margin="0,0,0,5"/>
        <syncfusion:SfTextBoxExt Grid.Row="4"
                                 x:Name="txtReplace"
                                 Height="32"
                                 Margin="0,0,0,15"
                                 Watermark="Enter replacement text..."/>

        <!-- Options and Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Options -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <CheckBox x:Name="chkMatchCase"
                          Content="Match case"
                          Foreground="{DynamicResource ContentForeground}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="chkWholeCell"
                          Content="Match entire cell contents"
                          Foreground="{DynamicResource ContentForeground}"
                          IsChecked="True"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <syncfusion:ButtonAdv x:Name="btnReplaceAll"
                                      Label="Replace All"
                                      Width="120"
                                      Height="34"
                                      Margin="0,0,0,10"
                                      Background="{DynamicResource PrimaryBackground}"
                                      Foreground="White"
                                      Click="BtnReplaceAll_Click"/>
                <syncfusion:ButtonAdv x:Name="btnClose"
                                      Label="Close"
                                      Width="120"
                                      Height="34"
                                      Background="{DynamicResource ContentBackground}"
                                      Foreground="{DynamicResource ContentForeground}"
                                      IsCancel="True"
                                      Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>