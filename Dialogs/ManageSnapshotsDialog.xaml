<Window x:Class="VANTAGE.Dialogs.ManageSnapshotsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        skinManager:SfSkinManager.Theme="{skinManager:SkinManagerExtension ThemeName=FluentDark}"
        Title="Manage My Snapshots"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Manage Snapshots"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{StaticResource ForegroundColor}"/>
            <TextBlock Text="Select a snapshot week to delete or revert to."
                       Foreground="{StaticResource ForegroundColor}"
                       Opacity="0.7"
                       FontSize="12"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- User Info -->
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="txtUserInfo" 
                       Text="Snapshots for: username" 
                       Foreground="{StaticResource ForegroundColor}" 
                       FontSize="12"/>
        </StackPanel>

        <!-- Week List -->
        <Border Grid.Row="4" 
                BorderBrush="{StaticResource ControlBorder}" 
                BorderThickness="1" 
                Background="{StaticResource ControlBackground}">
            <Grid>
                <ListView x:Name="lvWeeks"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="{StaticResource ControlForeground}"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Foreground="{StaticResource ControlForeground}"
                                      Margin="5">
                                <CheckBox.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding WeekEndDateDisplay}" 
                                                   Width="120"/>
                                        <TextBlock Text="{Binding SnapshotCountDisplay}" 
                                                   Opacity="0.7"/>
                                    </StackPanel>
                                </CheckBox.Content>
                            </CheckBox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <TextBlock x:Name="txtNoSnapshots"
                           Text="No snapshots found for your account."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource ForegroundColor}"
                           Opacity="0.6"
                           Visibility="Collapsed"/>

                <!-- Loading State -->
                <StackPanel x:Name="pnlLoading"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="Loading snapshots..."
                               Foreground="{StaticResource ForegroundColor}"
                               Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Selection Summary -->
        <TextBlock x:Name="txtSelectionSummary"
                   Grid.Row="5"
                   Text="0 weeks selected (0 snapshots)"
                   Foreground="{StaticResource ForegroundColor}"
                   Opacity="0.7"
                   FontSize="12"
                   Margin="0,10,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ControlBorder}"
                    BorderThickness="1"
                    Click="BtnCancel_Click"/>
            <Button x:Name="btnDelete"
                    Content="Delete Selected"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource ButtonDangerBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource ButtonDangerBorder}"
                    BorderThickness="1"
                    IsEnabled="False"
                    ToolTip="Delete the selected snapshot weeks"
                    Click="BtnDelete_Click"/>
            <Button x:Name="btnRevert"
                    Content="Revert To Selected"
                    Width="140"
                    Height="35"
                    Background="{StaticResource AccentColor}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="1"
                    IsEnabled="False"
                    ToolTip="Restore your activities to the state captured in the selected snapshot"
                    Click="BtnRevert_Click"/>
        </StackPanel>
    </Grid>
</Window>