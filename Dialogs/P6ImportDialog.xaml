<Window x:Class="VANTAGE.Dialogs.P6ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        skinManager:SfSkinManager.Theme="{skinManager:SkinManagerExtension ThemeName=FluentDark}"
        Title="Import P6 Schedule"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File Info -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="P6 Schedule File" 
                      FontWeight="SemiBold" 
                      FontSize="14" 
                      Foreground="{StaticResource ForegroundColor}"
                      Margin="0,0,0,5"/>
            <TextBlock x:Name="txtFileName" 
                      Text="No file selected" 
                      Foreground="{StaticResource ForegroundColor}" 
                      Opacity="0.6"
                      FontSize="12"/>
        </StackPanel>

        <!-- Week Ending Date -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Week Ending Date" 
                      FontWeight="SemiBold" 
                      FontSize="14" 
                      Foreground="{StaticResource ForegroundColor}"
                      Margin="0,0,0,5"/>
            <DatePicker x:Name="dpWeekEndDate" 
                       Width="200" 
                       HorizontalAlignment="Left"
                       Background="{StaticResource ControlBackground}"
                       Foreground="{StaticResource ControlForeground}"
                       BorderBrush="{StaticResource ControlBorder}"
                       SelectedDateChanged="DpWeekEndDate_SelectedDateChanged"/>
            <TextBlock x:Name="txtWeekEndHelper" 
                      Text="Defaults to previous Sunday" 
                      Foreground="{StaticResource ForegroundColor}" 
                      Opacity="0.6"
                      FontSize="11" 
                      Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Project Selection -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="Which ProjectIDs does this schedule cover?" 
                      FontWeight="SemiBold" 
                      FontSize="14" 
                      Foreground="{StaticResource ForegroundColor}"
                      Margin="0,0,0,5"/>
            <TextBlock Text="Select all projects included in this P6 schedule:" 
                      Foreground="{StaticResource ForegroundColor}" 
                      Opacity="0.6"
                      FontSize="11"/>
        </StackPanel>

        <!-- Project List -->
        <Border Grid.Row="6" 
                BorderBrush="{StaticResource ControlBorder}" 
                BorderThickness="1" 
                Background="{StaticResource ControlBackground}">
            <ListView x:Name="lvProjects"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="{StaticResource ControlForeground}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding DisplayText}"
                                 IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                 Foreground="{StaticResource ControlForeground}"
                                 Margin="5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Error Message -->
        <TextBlock x:Name="txtError"
                  Grid.Row="7"
                  Foreground="#FFE74C3C"
                  FontSize="12"
                  Margin="0,10,0,0"
                  Visibility="Collapsed"
                  TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                   Content="Cancel"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Background="{StaticResource ControlBackground}"
                   Foreground="{StaticResource ForegroundColor}"
                   BorderBrush="{StaticResource ControlBorder}"
                   BorderThickness="1"
                   Click="BtnCancel_Click"/>
            <Button x:Name="btnImport"
                   Content="Import"
                   Width="100"
                   Height="35"
                   Background="{StaticResource AccentColor}"
                   Foreground="{StaticResource ForegroundColor}"
                   BorderBrush="{StaticResource AccentColor}"
                   BorderThickness="1"
                   Click="BtnImport_Click"/>
        </StackPanel>
    </Grid>
</Window>