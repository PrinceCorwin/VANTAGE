<Window x:Class="VANTAGE.Dialogs.ThemeManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme"
        Height="330"
        Width="340"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Select Theme"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource ForegroundColor}"/>

        <!-- Dark theme radio button -->
        <RadioButton x:Name="rbDark"
                     Grid.Row="2"
                     GroupName="Theme"
                     Checked="RbTheme_Checked"
                     Foreground="{DynamicResource ForegroundColor}"
                     FontSize="14"
                     Margin="0,0,0,10"
                     ToolTip="Dark background with light text">
            <StackPanel Orientation="Horizontal">
                <Border Width="20" Height="20"
                        Background="#FF1E1E1E"
                        BorderBrush="{DynamicResource ControlBorder}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,8,0"/>
                <TextBlock Text="Dark" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        <!-- Light theme radio button -->
        <RadioButton x:Name="rbLight"
                     Grid.Row="3"
                     GroupName="Theme"
                     Checked="RbTheme_Checked"
                     Foreground="{DynamicResource ForegroundColor}"
                     FontSize="14"
                     Margin="0,0,0,10"
                     ToolTip="Light background with dark text">
            <StackPanel Orientation="Horizontal">
                <Border Width="20" Height="20"
                        Background="#FFF3F3F3"
                        BorderBrush="{DynamicResource ControlBorder}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,8,0"/>
                <TextBlock Text="Light" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        <!-- Orchid theme radio button -->
        <RadioButton x:Name="rbOrchid"
                     Grid.Row="4"
                     GroupName="Theme"
                     Checked="RbTheme_Checked"
                     Foreground="{DynamicResource ForegroundColor}"
                     FontSize="14"
                     ToolTip="Light purple theme with orchid accents">
            <StackPanel Orientation="Horizontal">
                <Border Width="20" Height="20"
                        Background="#FF7B1FA2"
                        BorderBrush="#FFE040FB"
                        BorderThickness="2"
                        CornerRadius="3"
                        Margin="0,0,8,0"/>
                <TextBlock Text="Orchid" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>

        <!-- Info text -->
        <TextBlock Grid.Row="6"
                   Text="Theme is applied instantly."
                   Foreground="{DynamicResource TextColorSecondary}"
                   FontSize="12"
                   TextWrapping="Wrap"/>

        <!-- Close button -->
        <Button Grid.Row="8"
                Content="Close"
                Width="80"
                HorizontalAlignment="Right"
                Foreground="{DynamicResource ForegroundColor}"
                Click="BtnClose_Click"
                ToolTip="Close theme selector"/>
    </Grid>
</Window>
