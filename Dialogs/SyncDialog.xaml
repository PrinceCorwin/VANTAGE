<Window x:Class="VANTAGE.Dialogs.SyncDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Sync with Azure Database"
        Icon="pack://application:,,,/images/AppIcon.ico"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackground}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Project List -->
            <RowDefinition Height="Auto"/>
            <!-- My Records Only checkbox -->
            <RowDefinition Height="Auto"/>
            <!-- Info Text -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Select Projects to Sync"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource ForegroundColor}"
                   Margin="0,0,0,20"/>

        <!-- Project List -->
        <Border Grid.Row="1"
                Background="{StaticResource ControlBackground}"
                BorderBrush="{StaticResource ControlBorder}"
                BorderThickness="1"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="projectList" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Foreground="{StaticResource ForegroundColor}"
                                     IsChecked="{Binding IsSelected}"
                                     Margin="0,5">
                                <TextBlock>
                                    <Run Text="{Binding ProjectID}" FontWeight="Bold"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding ProjectName}"/>
                                </TextBlock>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <!-- My Records Only Option -->
        <CheckBox x:Name="chkMyRecordsOnly"
          Grid.Row="2"
          Content="My Records Only - Pull only records assigned to me"
          Foreground="{StaticResource ForegroundColor}"
          IsChecked="False"
          Margin="0,0,0,10"
          VerticalAlignment="Top"/>

        <!-- Info Text -->
        <TextBlock Grid.Row="3"
           TextWrapping="Wrap"
           Foreground="{StaticResource ForegroundColor}"
           Opacity="0.8"
           Margin="0,0,0,20">
            <Run Text="• Checked projects will sync changes up to Azure and pull updates down"/>
            <LineBreak/>
            <Run Text="• Unchecked projects will not be synced"/>
            <LineBreak/>
            <Run Text="• 'My Records Only' removes other users' records from local database"/>
        </TextBlock>


        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="1"
                    Click="BtnCancel_Click"/>

            <Button x:Name="btnSync"
                    Content="Sync"
                    Width="100"
                    Height="35"
                    Background="{StaticResource AccentColor}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="1"
                    Click="BtnConfirmSync_Click"/>
        </StackPanel>
        
        <!-- Modern Loading Overlay for Sync Operations -->
        <Grid x:Name="LoadingOverlay"
            Background="{StaticResource OverlayBackground}"
            Visibility="Collapsed"
            Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center"
             VerticalAlignment="Center">
                <!-- Syncfusion Busy Indicator -->
                <syncfusion:SfBusyIndicator x:Name="BusyIndicator"
                                 IsBusy="True"
                                 AnimationType="DualRing"
                                 ViewboxWidth="80"
                                 ViewboxHeight="80"
                                 Foreground="{StaticResource AccentColor}"/>
                <!-- Loading Text -->
                <TextBlock x:Name="txtLoadingMessage"
                            Text="Syncing..."
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource OverlayText}"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,10"/>
                <!-- Progress Text -->
                <TextBlock x:Name="txtLoadingProgress"
                            Text="0 of 0 records"
                            FontSize="14"
                            Foreground="{StaticResource OverlayTextSecondary}"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                <!-- Progress Bar -->
                <syncfusion:SfLinearProgressBar x:Name="LoadingProgressBar"
                              Width="300"
                              Height="8"
                              IsIndeterminate="True"
                              ProgressColor="{StaticResource AccentColor}"
                              TrackColor="#333333"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>