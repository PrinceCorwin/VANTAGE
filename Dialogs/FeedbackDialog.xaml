<Window x:Class="VANTAGE.Dialogs.FeedbackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback Board"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Feedback List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Feedback"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{StaticResource ForegroundColor}"/>

            <!-- Filters -->
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="Type:"
                           Foreground="{StaticResource ForegroundColor}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <ComboBox x:Name="cboFilterType"
                          Width="100"
                          Height="28"
                          Background="{StaticResource ControlBackground}"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderBrush="{StaticResource BorderColor}"
                          SelectionChanged="CboFilter_SelectionChanged">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="Idea"/>
                    <ComboBoxItem Content="Bug"/>
                </ComboBox>

                <TextBlock Text="Status:"
                           Foreground="{StaticResource ForegroundColor}"
                           VerticalAlignment="Center"
                           Margin="20,0,8,0"/>
                <ComboBox x:Name="cboFilterStatus"
                          Width="120"
                          Height="28"
                          Background="{StaticResource ControlBackground}"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderBrush="{StaticResource BorderColor}"
                          SelectionChanged="CboFilter_SelectionChanged">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="New"/>
                    <ComboBoxItem Content="In Progress"/>
                    <ComboBoxItem Content="Complete"/>
                    <ComboBoxItem Content="Rejected"/>
                </ComboBox>

                <CheckBox x:Name="chkShowDeleted"
                          Content="Show Deleted"
                          Foreground="{StaticResource ForegroundColor}"
                          VerticalAlignment="Center"
                          Margin="20,0,0,0"
                          Visibility="Collapsed"
                          Checked="ChkShowDeleted_Changed"
                          Unchecked="ChkShowDeleted_Changed"/>
            </StackPanel>

            <Border Grid.Row="4"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <ListView x:Name="lvFeedback"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="{StaticResource ForegroundColor}"
                              SelectionMode="Single"
                              SelectionChanged="LvFeedback_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Type" Width="70" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="Status" Width="90" DisplayMemberBinding="{Binding StatusDisplay}"/>
                                <GridViewColumn Header="Created By" Width="100" DisplayMemberBinding="{Binding CreatedBy}"/>
                                <GridViewColumn Header="Date" Width="90" DisplayMemberBinding="{Binding CreatedDateDisplay}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel x:Name="pnlLoading"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="Loading feedback..."
                                   Foreground="{StaticResource ForegroundColor}"
                                   Opacity="0.6"/>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock x:Name="txtFeedbackCount"
                       Grid.Row="5"
                       Text="0 item(s)"
                       Foreground="{StaticResource ForegroundColor}"
                       Opacity="0.6"
                       FontSize="12"
                       Margin="0,8,0,0"/>
        </Grid>

        <!-- Right: Edit Form -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Details"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="{StaticResource ForegroundColor}"/>

            <Border Grid.Row="2"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Type *"
                                   Foreground="{StaticResource ForegroundColor}"
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="cboType"
                                  Height="32"
                                  Background="{StaticResource BackgroundColor}"
                                  Foreground="{StaticResource ForegroundColor}"
                                  BorderBrush="{StaticResource BorderColor}">
                            <ComboBoxItem Content="Idea" IsSelected="True"/>
                            <ComboBoxItem Content="Bug"/>
                        </ComboBox>

                        <TextBlock Text="Title *"
                                   Foreground="{StaticResource ForegroundColor}"
                                   FontSize="12"
                                   Margin="0,15,0,5"/>
                        <TextBox x:Name="txtTitle"
                                 Height="32"
                                 FontSize="14"
                                 Background="{StaticResource BackgroundColor}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}"
                                 Padding="8,5"/>

                        <TextBlock Text="Description"
                                   Foreground="{StaticResource ForegroundColor}"
                                   FontSize="12"
                                   Margin="0,15,0,5"/>
                        <TextBox x:Name="txtDescription"
                                 Height="150"
                                 FontSize="14"
                                 Background="{StaticResource BackgroundColor}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}"
                                 Padding="8,5"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>

                        <TextBlock Text="Status"
                                   Foreground="{StaticResource ForegroundColor}"
                                   FontSize="12"
                                   Margin="0,15,0,5"/>
                        <ComboBox x:Name="cboStatus"
                                  Height="32"
                                  Background="{StaticResource BackgroundColor}"
                                  Foreground="{StaticResource ForegroundColor}"
                                  BorderBrush="{StaticResource BorderColor}"
                                  IsEnabled="False">
                            <ComboBoxItem Content="New" IsSelected="True"/>
                            <ComboBoxItem Content="In Progress"/>
                            <ComboBoxItem Content="Complete"/>
                            <ComboBoxItem Content="Rejected"/>
                        </ComboBox>
                        <TextBlock x:Name="txtStatusNote"
                                   Text="(Admins only)"
                                   Foreground="{StaticResource ForegroundColor}"
                                   Opacity="0.5"
                                   FontSize="11"
                                   Margin="0,3,0,0"/>

                        <TextBlock x:Name="txtCreatedInfo"
                                   Foreground="{StaticResource ForegroundColor}"
                                   Opacity="0.6"
                                   FontSize="11"
                                   Margin="0,20,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnNew"
                            Grid.Column="0"
                            Content="New"
                            Height="35"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource ControlBorder}"
                            BorderThickness="1"
                            Click="BtnNew_Click"/>

                    <Button x:Name="btnSave"
                            Grid.Column="2"
                            Content="Submit"
                            Height="35"
                            Background="{StaticResource ButtonSuccessBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource ButtonSuccessBorder}"
                            BorderThickness="1"
                            Click="BtnSave_Click"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnRestore"
                            Grid.Column="0"
                            Content="Restore"
                            Height="35"
                            Background="{StaticResource ButtonSuccessBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource ButtonSuccessBorder}"
                            BorderThickness="1"
                            Visibility="Collapsed"
                            Click="BtnRestore_Click"/>

                    <Button x:Name="btnDelete"
                            Grid.Column="2"
                            Content="Delete"
                            Height="35"
                            Background="{StaticResource ButtonDangerBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource ButtonDangerBorder}"
                            BorderThickness="1"
                            IsEnabled="False"
                            Visibility="Collapsed"
                            Click="BtnDelete_Click"/>
                </Grid>

                <Button x:Name="btnClose"
                        Content="Close"
                        Height="35"
                        Margin="0,20,0,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderBrush="{StaticResource ControlBorder}"
                        BorderThickness="1"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
