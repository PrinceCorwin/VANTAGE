<Window x:Class="VANTAGE.Dialogs.AdminUsersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        skinManager:SfSkinManager.Theme="{skinManager:SkinManagerExtension ThemeName=FluentDark}"
        Title="Admin: Edit Users"
        Height="500"
        Width="750"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="600"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Left: User List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Users" 
                       FontWeight="SemiBold" 
                       FontSize="16" 
                       Foreground="{StaticResource ForegroundColor}"/>

            <Border Grid.Row="2"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <ListView x:Name="lvUsers"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="{StaticResource ForegroundColor}"
                              SelectionMode="Single"
                              SelectionChanged="LvUsers_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Username" Width="120" DisplayMemberBinding="{Binding Username}"/>
                                <GridViewColumn Header="Full Name" Width="150" DisplayMemberBinding="{Binding FullName}"/>
                                <GridViewColumn Header="Email" Width="150" DisplayMemberBinding="{Binding Email}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel x:Name="pnlLoading"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="Loading users..."
                                   Foreground="{StaticResource ForegroundColor}"
                                   Opacity="0.6"/>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBlock x:Name="txtUserCount" 
                       Grid.Row="3" 
                       Text="0 user(s)" 
                       Foreground="{StaticResource ForegroundColor}"
                       Opacity="0.6"
                       FontSize="12"
                       Margin="0,8,0,0"/>
        </Grid>

        <!-- Right: Edit Form -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="User Details" 
                       FontWeight="SemiBold" 
                       FontSize="16" 
                       Foreground="{StaticResource ForegroundColor}"/>

            <Border Grid.Row="2"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Username *" 
                               Foreground="{StaticResource ForegroundColor}"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername"
                             Height="32"
                             FontSize="14"
                             Background="{StaticResource BackgroundColor}"
                             Foreground="{StaticResource ForegroundColor}"
                             BorderBrush="{StaticResource BorderColor}"
                             Padding="8,5"/>

                    <TextBlock Text="Full Name" 
                               Foreground="{StaticResource ForegroundColor}"
                               FontSize="12"
                               Margin="0,15,0,5"/>
                    <TextBox x:Name="txtFullName"
                             Height="32"
                             FontSize="14"
                             Background="{StaticResource BackgroundColor}"
                             Foreground="{StaticResource ForegroundColor}"
                             BorderBrush="{StaticResource BorderColor}"
                             Padding="8,5"/>

                    <TextBlock Text="Email" 
                               Foreground="{StaticResource ForegroundColor}"
                               FontSize="12"
                               Margin="0,15,0,5"/>
                    <TextBox x:Name="txtEmail"
                             Height="32"
                             FontSize="14"
                             Background="{StaticResource BackgroundColor}"
                             Foreground="{StaticResource ForegroundColor}"
                             BorderBrush="{StaticResource BorderColor}"
                             Padding="8,5"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnNew"
                            Grid.Column="0"
                            Content="New User"
                            Height="35"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource ControlBorder}"
                            BorderThickness="1"
                            Click="BtnNew_Click"/>

                    <Button x:Name="btnSave"
                            Grid.Column="2"
                            Content="Add User"
                            Height="35"
                            Background="{StaticResource ButtonSuccessBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource ButtonSuccessBorder}"
                            BorderThickness="1"
                            Click="BtnSave_Click"/>
                </Grid>

                <Button x:Name="btnDelete"
                        Content="Delete User"
                        Height="35"
                        Margin="0,10,0,0"
                        Background="{StaticResource ButtonDangerBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderBrush="{StaticResource ButtonDangerBorder}"
                        BorderThickness="1"
                        IsEnabled="False"
                        Click="BtnDelete_Click"/>

                <Button x:Name="btnClose"
                        Content="Close"
                        Height="35"
                        Margin="0,20,0,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderBrush="{StaticResource ControlBorder}"
                        BorderThickness="1"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>