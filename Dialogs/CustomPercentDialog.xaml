<Window x:Class="VANTAGE.Dialogs.CustomPercentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Percent"
        Height="210"
        Width="350"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20,20,20,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock Grid.Row="0"
                   Text="Enter custom percent value (0-100):"
                   Foreground="{DynamicResource ForegroundColor}"
                   FontSize="13"/>

        <!-- Input TextBox -->
        <TextBox x:Name="txtPercent"
                 Grid.Row="2"
                 Height="35"
                 FontSize="14"
                 Padding="10,8,10,8"
                 Background="{DynamicResource ControlBackground}"
                 Foreground="{DynamicResource ControlForeground}"
                 BorderBrush="{DynamicResource ControlBorder}"
                 BorderThickness="1"
                 VerticalContentAlignment="Center"
                 MaxLength="3"
                 PreviewTextInput="TxtPercent_PreviewTextInput"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{DynamicResource ControlBackground}"
                    Foreground="{DynamicResource ForegroundColor}"
                    BorderBrush="{DynamicResource ControlBorder}"
                    BorderThickness="1"
                    IsCancel="True"/>

            <Button Content="OK"
                    Width="80"
                    Height="35"
                    Background="{DynamicResource AccentColor}"
                    Foreground="{DynamicResource ForegroundColor}"
                    BorderBrush="{DynamicResource AccentColor}"
                    BorderThickness="1"
                    IsDefault="True"
                    Click="BtnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>