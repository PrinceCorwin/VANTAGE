<Window x:Class="VANTAGE.SyncDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sync with Central Database"
        Icon="pack://application:,,,/images/AppIcon.ico"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackground}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Select Projects to Sync"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource ForegroundColor}"
                   Margin="0,0,0,20"/>

        <!-- Project List -->
        <Border Grid.Row="1"
                Background="{StaticResource ControlBackground}"
                BorderBrush="{StaticResource ControlBorder}"
                BorderThickness="1"
                Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="projectList" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Foreground="{StaticResource ForegroundColor}"
                                     IsChecked="{Binding IsSelected}"
                                     Margin="0,5">
                                                            <TextBlock>
                                    <Run Text="{Binding ProjectID}" FontWeight="Bold"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding ProjectName}"/>
                                </TextBlock>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Info Text -->
        <TextBlock Grid.Row="2"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource ForegroundColor}"
                   Opacity="0.8"
                   Margin="0,0,0,20">
            <Run Text="• Checked projects will sync changes up to Central and pull updates down"/>
            <LineBreak/>
            <Run Text="• Unchecked projects will not be synced"/>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="1"
                    Click="BtnCancel_Click"/>

            <Button x:Name="btnSync"
                    Content="Sync"
                    Width="100"
                    Height="35"
                    Background="{StaticResource AccentColor}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="1"
                    Click="BtnConfirmSync_Click"/>
        </StackPanel>
    </Grid>
</Window>