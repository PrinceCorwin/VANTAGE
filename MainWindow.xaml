<Window x:Class="VANTAGE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VANTAGE: MILESTONE" 
        Height="700" 
        Width="1200"
        WindowState="Maximized"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <!-- Define rows: Toolbar, Content, StatusBar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Content Area -->
            <RowDefinition Height="30"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- TOOLBAR (Top) -->
        <Border Grid.Row="0" 
        Background="{StaticResource ToolbarBackground}" 
        BorderBrush="{StaticResource BorderColor}" 
        BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="10,0">
                <!-- PROGRESS Button -->
                <Button x:Name="btnProgress" 
                        Content="PROGRESS" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ToolbarButtonActive}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnProgress_Click"/>

                <!-- SCHEDULE Button -->
                <Button x:Name="btnSchedule" 
                        Content="SCHEDULE" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnSchedule_Click"/>

                <!-- CREATE Button -->
                <Button x:Name="btnCreate" 
                        Content="CREATE" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnCreate_Click"/>

                <!-- EXCEL Button (Dropdown) -->
                <Button x:Name="btnExcel" 
                        Content="EXCEL ▼" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnExcel_Click">
                    <Button.ContextMenu>
                        <ContextMenu x:Name="menuExcel"
                                     Background="{StaticResource ControlBackground}"
                                     Foreground="{StaticResource ForegroundColor}"
                                     BorderBrush="{StaticResource BorderColor}">
                            <MenuItem Header="Import (Replace)" 
                                      Click="MenuExcelImportReplace_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Import (Combine)" 
                                      Click="MenuExcelImportCombine_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Export Activities" 
                                      Click="ExcelExportActivities_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Export Template" 
                                      Click="ExcelExportTemplate_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- PRINT Button -->
                <Button x:Name="btnPbook" 
                        Content="PROG BOOK" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnPbook_Click"/>

                <!-- WORK PACKAGE Button -->
                <Button x:Name="btnWorkPackage" 
                        Content="WP" 
                        Width="120" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnWorkPackage_Click"/>

                <!-- REPORTS Button (Dropdown) -->
                <Button x:Name="btnReports" 
                        Content="REPORTS ▼" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnReports_Click">
                                <Button.ContextMenu>
                                    <ContextMenu x:Name="menuReports"
                                     Background="{StaticResource ControlBackground}"
                                     Foreground="{StaticResource ForegroundColor}"
                                     BorderBrush="{StaticResource BorderColor}">
                                        <MenuItem Header="REPORT 1" 
                                      Click="MenuReport1_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 2" 
                                      Click="MenuReport2_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 3" 
                                      Click="MenuReport3_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 4" 
                                      Click="MenuReport4_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 5" 
                                      Click="MenuReport5_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 6" 
                                      Click="MenuReport6_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 7" 
                                      Click="MenuReport7_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 8" 
                                      Click="MenuReport8_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 9" 
                                      Click="MenuReport9_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                        <MenuItem Header="REPORT 10" 
                                      Click="MenuReport10_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                </Button>

                <!-- ANALYSIS Button (Dropdown) -->
                <Button x:Name="btnAnalysis" 
                        Content="ANALYSIS ▼" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnAnalysis_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuAnalysis"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="ANALYSIS 1" 
                            Click="MenuAnalysis1_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 2" 
                            Click="MenuAnalysis2_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 3" 
                            Click="MenuAnalysis3_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 4" 
                            Click="MenuAnalysis4_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 5" 
                            Click="MenuAnalysis5_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 6" 
                            Click="MenuAnalysis6_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 7" 
                            Click="MenuAnalysis7_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 8" 
                            Click="MenuAnalysis8_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 9" 
                            Click="MenuAnalysis9_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="ANALYSIS 10" 
                            Click="MenuAnalysis10_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                </Button>

                <!-- TOOLS Button (Dropdown) -->
                <Button x:Name="btnTools" 
                        Content="TOOLS ▼" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnTools_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuTools"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"
                            BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="TOOL 1" 
                                Click="MenuTool1_Click"
                                Background="{StaticResource ControlBackground}"
                                Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 2" 
                                Click="MenuTool2_Click"
                                Background="{StaticResource ControlBackground}"
                                Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 3" 
                            Click="MenuTool3_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 4" 
                            Click="MenuTool4_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 5" 
                            Click="MenuTool5_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 6" 
                            Click="MenuTool6_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 7" 
                            Click="MenuTool7_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 8" 
                            Click="MenuTool8_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 9" 
                            Click="MenuTool9_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="TOOL 10" 
                            Click="MenuTool10_Click"
                            Background="{StaticResource ControlBackground}"
                            Foreground="{StaticResource ForegroundColor}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                </Button>

                <!-- ADMIN Button (Dropdown) -->
                <Button x:Name="btnAdmin" 
                        Content="ADMIN ▼" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnAdmin_Click">
                    <Button.ContextMenu>
                        <ContextMenu x:Name="menuAdmin"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"
                                        BorderBrush="{StaticResource BorderColor}">
                            <MenuItem Header="Toggle User Admin" 
                                        Click="ToggleUserAdmin_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Deleted Records UI" 
                                        Click="DeletedRecordsUi_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 3" 
                                        Click="MenuAdmin3_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 4" 
                                        Click="MenuAdmin4_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 5" 
                                        Click="MenuAdmin5_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 6" 
                                        Click="MenuAdmin6_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 7" 
                                        Click="MenuAdmin7_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 8" 
                                        Click="MenuAdmin8_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 9" 
                                        Click="MenuAdmin9_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="ADMIN 10" 
                                        Click="MenuAdmin10_Click"
                                        Background="{StaticResource ControlBackground}"
                                        Foreground="{StaticResource ForegroundColor}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <!-- TEST Button (Development Helpers) -->
                <Button x:Name="btnTest" 
                        Content="TEST ▼" 
                        Width="100" 
                        Height="40"
                        Margin="5,0"
                        Background="{StaticResource ControlBackground}"
                        Foreground="{StaticResource ForegroundColor}"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Click="BtnTest_Click">
                    <Button.ContextMenu>
                        <ContextMenu x:Name="menuTest"
                                     Background="{StaticResource ControlBackground}"
                                     Foreground="{StaticResource ForegroundColor}"
                                     BorderBrush="{StaticResource BorderColor}">
                            <MenuItem Header="Toggle Admin Status" 
                                      Click="MenuToggleAdmin_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Seed Users" 
                                      Click="MenuSeedUsers_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Reset LocalDirty (All Records)" 
                                      Click="MenuResetLocalDirty_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Toggle UpdatedBy" 
                                      Click="ToggleUpdatedBy_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Test 3" 
                                      Click="MenuTest3_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Test 4" 
                                      Click="MenuTest4_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Test 5" 
                                      Click="MenuTest5_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Test 6" 
                                      Click="MenuTest6_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Test 7" 
                                      Click="MenuTest7_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                            <MenuItem Header="Test 8" 
                                      Click="MenuTest8_Click"
                                      Background="{StaticResource ControlBackground}"
                                      Foreground="{StaticResource ForegroundColor}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </StackPanel>
        </Border>

        <!-- CONTENT AREA (Middle) -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundColor}">
            <ContentControl x:Name="ContentArea" />
        </Border>

        <!-- STATUS BAR (Bottom) -->
        <Border Grid.Row="2" 
                Background="{StaticResource StatusBarBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current User -->
                <TextBlock Grid.Column="0" 
                           x:Name="txtCurrentUser"
                           Text="User: Steve.Amalfitano" 
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="10,0,20,0"/>

                <!-- Current Project -->
                <TextBlock Grid.Column="1" 
                           Text="Project:" 
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <ComboBox Grid.Column="2" 
                          x:Name="cmbCurrentProject"
                          Width="150"
                          Height="20"
                          Background="{StaticResource ControlBackground}"
                          Foreground="{StaticResource ControlForeground}"
                          BorderBrush="{StaticResource ControlBorder}"
                          Margin="0,0,20,0"/>

                <!-- Spacer -->
                <TextBlock Grid.Column="3"/>

                <!-- Record Count -->
                <TextBlock Grid.Column="4" 
                           x:Name="txtLastSyncsd"
                           Text="Last Sync: Never" 
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
            </Grid>
        </Border>

        <!-- Modern Loading Overlay for Excel Imports -->
   <Grid x:Name="LoadingOverlay"
         Grid.RowSpan="3"
        Background="#DD000000"
        Visibility="Collapsed"
           Panel.ZIndex="1000">
    <!-- No border/box - just centered content -->
    <StackPanel HorizontalAlignment="Center"
     VerticalAlignment="Center">
      <!-- Spinner -->
                <Viewbox Width="80" Height="80" HorizontalAlignment="Center">
 <Canvas Width="100" Height="100">
            <Ellipse x:Name="SpinnerEllipse"
      Width="80"
          Height="80"
            Canvas.Left="10"
       Canvas.Top="10"
        Stroke="{StaticResource AccentColor}"
          StrokeThickness="8"
      StrokeDashArray="60 40"
        Fill="Transparent"
      RenderTransformOrigin="0.5,0.5">
          <Ellipse.RenderTransform>
          <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
        </Ellipse.RenderTransform>
     </Ellipse>
      </Canvas>
         </Viewbox>

    <!-- Loading Text -->
      <TextBlock x:Name="txtLoadingMessage"
         Text="Importing Excel File..."
  FontSize="18"
     FontWeight="SemiBold"
          Foreground="White"
                  HorizontalAlignment="Center"
       Margin="0,30,0,10"/>

     <!-- Progress Text -->
       <TextBlock x:Name="txtLoadingProgress"
          Text="0 of 0 records"
          FontSize="14"
   Foreground="#CCCCCC"
      HorizontalAlignment="Center"
        Margin="0,0,0,15"/>

  <!-- Progress Bar -->
       <ProgressBar x:Name="LoadingProgressBar"
 Width="300"
            Height="8"
        Minimum="0"
       Maximum="100"
              Value="0"
       Foreground="{StaticResource AccentColor}"
    Background="#333333"
      BorderThickness="0"/>
            </StackPanel>
     </Grid>
    </Grid>
</Window>