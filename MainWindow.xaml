<syncfusion:ChromelessWindow x:Class="VANTAGE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="VANTAGE: MILESTONE"
        TitleBarHeight="0"
        Height="700"
        Width="1200"
        WindowState="Maximized"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <!-- TOOLBAR -->
        <!-- TOOLBAR -->
        <Border Grid.Row="0"
        Background="{StaticResource ToolbarBackground}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="0,0,0,1">

            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <!--<ColumnDefinition Width="Auto"/>-->
                    <!-- Logo -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Navigation -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Create/Excel -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- PBook/WP/Reports/Analysis -->
                    <ColumnDefinition Width="*"/>
                    <!-- Tools/Admin/Test (fills space) -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Window controls -->
                </Grid.ColumnDefinitions>

                <!-- COLUMN 0: LOGO (LEFT) --><!--
                <Border Grid.Column="0"
                Background="Transparent"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="0,0,20,0">
                    <Image Width="100"
                   Height="40"
                   Source="pack://application:,,,/images/SummitS-Full Summit Peak Logo.jpg"
                   Stretch="Uniform"/>
                </Border>-->

                <!-- COLUMN 1: NAVIGATION BUTTONS -->
                <StackPanel Grid.Column="0" 
                    Orientation="Horizontal"
                    Background="{StaticResource ToolbarBackground}">

                    <Grid Width="120" Height="40">
                        <syncfusion:ButtonAdv x:Name="btnProgress"
                                      Label="PROGRESS"
                                      Padding="15,0"
                                      Height="40"
                                      Background="Transparent"
                                      Foreground="{StaticResource ForegroundColor}"
                                      BorderThickness="0"
                                      IconTemplate="{x:Null}"
                                      SmallIcon="{x:Null}"
                                      LargeIcon="{x:Null}"
                                      FontSize="12"
                                      FontWeight="Bold"
                                      Click="BtnProgress_Click"/>
                        <Border x:Name="borderProgress"
                                        Width="120"
                                        Height="3"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Bottom"
                                        Background="Transparent"/>
                    </Grid>

                    <Grid Width="120" Height="40">
                        <syncfusion:ButtonAdv x:Name="btnSchedule"
                                      Label="SCHEDULE"
                                      Padding="15,0"
                                      Height="40"
                                      Background="Transparent"
                                      Foreground="{StaticResource ForegroundColor}"
                                      BorderThickness="0"
                                      IconTemplate="{x:Null}"
                                      SmallIcon="{x:Null}"
                                      LargeIcon="{x:Null}"
                                      FontSize="12"
                                      FontWeight="Bold"
                                      Click="BtnSchedule_Click"/>
                        <Border x:Name="borderSchedule"
                                        Width="120"
                                        Height="3"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Bottom"
                                        Background="Transparent"/>
                    </Grid>

                </StackPanel>

                <!-- COLUMN 2: CREATE & EXCEL -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">

                    <syncfusion:ButtonAdv x:Name="btnCreate"
                          Label="CREATE"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnCreate_Click"/>

                    <syncfusion:ButtonAdv x:Name="btnExcel"
                          Label="EXCEL ▼"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnExcel_Click">
                        <syncfusion:ButtonAdv.ContextMenu>
                            <ContextMenu x:Name="menuExcel"
                                         Background="{StaticResource ControlBackground}"
                                         Foreground="{StaticResource ForegroundColor}"
                                         BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="Import (Replace)" Click="MenuExcelImportReplace_Click"/>
                                <MenuItem Header="Import (Combine)" Click="MenuExcelImportCombine_Click"/>
                                <MenuItem Header="Export Activities" Click="ExcelExportActivities_Click"/>
                                <MenuItem Header="Export Template" Click="ExcelExportTemplate_Click"/>
                            </ContextMenu>
                        </syncfusion:ButtonAdv.ContextMenu>
                    </syncfusion:ButtonAdv>

                </StackPanel>
                <!-- COLUMN 3: PBOOK, WP, REPORTS, ANALYSIS -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <syncfusion:ButtonAdv x:Name="btnPbook"
                          Label="PROG BOOK"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnPbook_Click"/>

                    <syncfusion:ButtonAdv x:Name="btnWorkPackage"
                          Label="WP"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnWorkPackage_Click"/>

                    <syncfusion:ButtonAdv x:Name="btnReports"
                          Label="REPORTS ▼"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnReports_Click">
                        <syncfusion:ButtonAdv.ContextMenu>
                            <ContextMenu x:Name="menuReports"
                         Background="{StaticResource ControlBackground}"
                         Foreground="{StaticResource ForegroundColor}"
                         BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="REPORT 1" Click="MenuReport1_Click"/>
                                <MenuItem Header="REPORT 2" Click="MenuReport2_Click"/>
                                <MenuItem Header="REPORT 3" Click="MenuReport3_Click"/>
                                <MenuItem Header="REPORT 4" Click="MenuReport4_Click"/>
                                <MenuItem Header="REPORT 5" Click="MenuReport5_Click"/>
                                <MenuItem Header="REPORT 6" Click="MenuReport6_Click"/>
                                <MenuItem Header="REPORT 7" Click="MenuReport7_Click"/>
                                <MenuItem Header="REPORT 8" Click="MenuReport8_Click"/>
                                <MenuItem Header="REPORT 9" Click="MenuReport9_Click"/>
                                <MenuItem Header="REPORT 10" Click="MenuReport10_Click"/>
                            </ContextMenu>
                        </syncfusion:ButtonAdv.ContextMenu>
                    </syncfusion:ButtonAdv>

                    <syncfusion:ButtonAdv x:Name="btnAnalysis"
                          Label="ANALYSIS ▼"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnAnalysis_Click">
                        <syncfusion:ButtonAdv.ContextMenu>
                            <ContextMenu x:Name="menuAnalysis"
                                         Background="{StaticResource ControlBackground}"
                                         Foreground="{StaticResource ForegroundColor}"
                                         BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="ANALYSIS 1" Click="MenuAnalysis1_Click"/>
                                <MenuItem Header="ANALYSIS 2" Click="MenuAnalysis2_Click"/>
                                <MenuItem Header="ANALYSIS 3" Click="MenuAnalysis3_Click"/>
                                <MenuItem Header="ANALYSIS 4" Click="MenuAnalysis4_Click"/>
                                <MenuItem Header="ANALYSIS 5" Click="MenuAnalysis5_Click"/>
                                <MenuItem Header="ANALYSIS 6" Click="MenuAnalysis6_Click"/>
                                <MenuItem Header="ANALYSIS 7" Click="MenuAnalysis7_Click"/>
                                <MenuItem Header="ANALYSIS 8" Click="MenuAnalysis8_Click"/>
                                <MenuItem Header="ANALYSIS 9" Click="MenuAnalysis9_Click"/>
                                <MenuItem Header="ANALYSIS 10" Click="MenuAnalysis10_Click"/>
                            </ContextMenu>
                        </syncfusion:ButtonAdv.ContextMenu>
                    </syncfusion:ButtonAdv>

                </StackPanel>

                <!-- COLUMN 4: TOOLS, ADMIN, TEST (LEFT-ALIGNED IN EXPANDING SPACE) -->
                <StackPanel Grid.Column="3" 
            Orientation="Horizontal"
            HorizontalAlignment="Left">

                    <syncfusion:ButtonAdv x:Name="btnTools"
                          Label="TOOLS ▼"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnTools_Click">
                        <syncfusion:ButtonAdv.ContextMenu>
                            <ContextMenu x:Name="menuTools"
                                         Background="{StaticResource ControlBackground}"
                                         Foreground="{StaticResource ForegroundColor}"
                                         BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="TOOL 1" Click="MenuTool1_Click"/>
                                <MenuItem Header="TOOL 2" Click="MenuTool2_Click"/>
                                <MenuItem Header="TOOL 3" Click="MenuTool3_Click"/>
                                <MenuItem Header="TOOL 4" Click="MenuTool4_Click"/>
                                <MenuItem Header="TOOL 5" Click="MenuTool5_Click"/>
                                <MenuItem Header="TOOL 6" Click="MenuTool6_Click"/>
                                <MenuItem Header="TOOL 7" Click="MenuTool7_Click"/>
                                <MenuItem Header="TOOL 8" Click="MenuTool8_Click"/>
                                <MenuItem Header="TOOL 9" Click="MenuTool9_Click"/>
                                <MenuItem Header="TOOL 10" Click="MenuTool10_Click"/>
                            </ContextMenu>
                        </syncfusion:ButtonAdv.ContextMenu>
                    </syncfusion:ButtonAdv>

                    <syncfusion:ButtonAdv x:Name="btnAdmin"
                          Label="ADMIN ▼"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnAdmin_Click">
                        <syncfusion:ButtonAdv.ContextMenu>
                            <ContextMenu x:Name="menuAdmin"
                                         Background="{StaticResource ControlBackground}"
                                         Foreground="{StaticResource ForegroundColor}"
                                         BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="Toggle User Admin" Click="ToggleUserAdmin_Click"/>
                                <MenuItem Header="Deleted Records UI" Click="DeletedRecordsUi_Click"/>
                                <MenuItem Header="ADMIN 3" Click="MenuAdmin3_Click"/>
                                <MenuItem Header="ADMIN 4" Click="MenuAdmin4_Click"/>
                                <MenuItem Header="ADMIN 5" Click="MenuAdmin5_Click"/>
                                <MenuItem Header="ADMIN 6" Click="MenuAdmin6_Click"/>
                                <MenuItem Header="ADMIN 7" Click="MenuAdmin7_Click"/>
                                <MenuItem Header="ADMIN 8" Click="MenuAdmin8_Click"/>
                                <MenuItem Header="ADMIN 9" Click="MenuAdmin9_Click"/>
                                <MenuItem Header="ADMIN 10" Click="MenuAdmin10_Click"/>
                            </ContextMenu>
                        </syncfusion:ButtonAdv.ContextMenu>
                    </syncfusion:ButtonAdv>

                    <syncfusion:ButtonAdv x:Name="btnTest"
                          Label="TEST ▼"
                          Padding="15,0"
                          Height="40"
                          Margin="5,0"
                          Background="Transparent"
                          Foreground="{StaticResource ForegroundColor}"
                          BorderThickness="0"
                          IconTemplate="{x:Null}"
                          SmallIcon="{x:Null}"
                          LargeIcon="{x:Null}"
                          FontSize="12"
                          FontWeight="Bold"
                          Click="BtnTest_Click">
                        <syncfusion:ButtonAdv.ContextMenu>
                            <ContextMenu x:Name="menuTest"
                                         Background="{StaticResource ControlBackground}"
                                         Foreground="{StaticResource ForegroundColor}"
                                         BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="Toggle Admin Status" Click="MenuToggleAdmin_Click"/>
                                <MenuItem Header="Reset LocalDirty (All Records)" Click="MenuResetLocalDirty_Click"/>
                                <MenuItem Header="Toggle UpdatedBy" Click="ToggleUpdatedBy_Click"/>
                                <MenuItem Header="Test 3" Click="MenuTest3_Click"/>
                                <MenuItem Header="Test 4" Click="MenuTest4_Click"/>
                                <MenuItem Header="Test 5" Click="MenuTest5_Click"/>
                                <MenuItem Header="Test 6" Click="MenuTest6_Click"/>
                                <MenuItem Header="Test 7" Click="MenuTest7_Click"/>
                                <MenuItem Header="Test 8" Click="MenuTest8_Click"/>
                            </ContextMenu>
                        </syncfusion:ButtonAdv.ContextMenu>
                    </syncfusion:ButtonAdv>

                </StackPanel>
                <!-- COLUMN 5: WINDOW CONTROLS (RIGHT) -->
                <StackPanel Grid.Column="4" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <Button x:Name="btnMinimize"
                    Content="─"
                    Width="46"
                    Height="50"
                    Background="Transparent"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="16"
                    Click="BtnMinimize_Click"
                    ToolTip="Minimize"/>

                    <Button x:Name="btnMaximize"
                    Content="☐"
                    Width="46"
                    Height="50"
                    Background="Transparent"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="16"
                    Click="BtnMaximize_Click"
                    ToolTip="Maximize"/>

                    <Button x:Name="btnClose"
        Width="46"
        Height="50"
        Click="BtnClose_Click"
        ToolTip="Close">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="Transparent">
                                    <TextBlock Text="✕" 
                           FontSize="16"
                           Foreground="{StaticResource ForegroundColor}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                        <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>

            </Grid>
        </Border>

        <!-- CONTENT AREA -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundColor}">
            <ContentControl x:Name="ContentArea"/>
        </Border>

        <!-- STATUS BAR -->
        <Border Grid.Row="2"
                Background="{StaticResource StatusBarBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="txtCurrentUser"
                           Text="User: Steve.Amalfitano"
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="10,0,20,0"/>

                <TextBlock Grid.Column="2"
                           x:Name="txtLastSyncsd"
                           Text="Last Sync: Never"
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
            </Grid>
        </Border>

        <!-- Modern Loading Overlay for Excel Imports -->
        <Grid x:Name="LoadingOverlay"
         Grid.RowSpan="3"
        Background="#DD000000"
        Visibility="Collapsed"
           Panel.ZIndex="1000">
            <!-- No border/box - just centered content -->
            <StackPanel HorizontalAlignment="Center"
     VerticalAlignment="Center">
                <!-- Spinner -->
                <Viewbox Width="80" Height="80" HorizontalAlignment="Center">
                    <Canvas Width="100" Height="100">
                        <Ellipse x:Name="SpinnerEllipse"
      Width="80"
          Height="80"
            Canvas.Left="10"
       Canvas.Top="10"
        Stroke="{StaticResource AccentColor}"
          StrokeThickness="8"
      StrokeDashArray="60 40"
        Fill="Transparent"
      RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Canvas>
                </Viewbox>

                <!-- Loading Text -->
                <TextBlock x:Name="txtLoadingMessage"
         Text="Importing Excel File..."
  FontSize="18"
     FontWeight="SemiBold"
          Foreground="White"
                  HorizontalAlignment="Center"
       Margin="0,30,0,10"/>

                <!-- Progress Text -->
                <TextBlock x:Name="txtLoadingProgress"
          Text="0 of 0 records"
          FontSize="14"
   Foreground="#CCCCCC"
      HorizontalAlignment="Center"
        Margin="0,0,0,15"/>

                <!-- Progress Bar -->
                <ProgressBar x:Name="LoadingProgressBar"
 Width="300"
            Height="8"
        Minimum="0"
       Maximum="100"
              Value="0"
       Foreground="{StaticResource AccentColor}"
    Background="#333333"
      BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>