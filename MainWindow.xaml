<Window x:Class="VANTAGE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="VANTAGE: MILESTONE" 
        Height="700" 
        Width="1200"
        WindowState="Maximized"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <!-- Define rows: Toolbar, Content, StatusBar -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Content Area -->
            <RowDefinition Height="30"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- TOOLBAR (Top) -->
        <Border Grid.Row="0"
        Background="{StaticResource ToolbarBackground}"
        BorderBrush="{StaticResource BorderColor}"
        BorderThickness="0,0,0,1">

            <!-- 4 columns: 3 button groups + logo on the right -->
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <!-- Group 1: Progress / Schedule / Create / Excel -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Group 2: Prog Book / WP -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Group 3: Reports / Analysis / Tools / Admin / Test (stretch if needed) -->
                    <ColumnDefinition Width="*" />
                    <!-- Logo -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- GROUP 1 -->
                <StackPanel Grid.Column="0"
                    Orientation="Horizontal">
                    <Button x:Name="btnProgress"
                    Content="PROGRESS"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ToolbarButtonActive}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnProgress_Click"/>

                    <Button x:Name="btnSchedule"
                    Content="SCHEDULE"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnSchedule_Click"/>

                    <Button x:Name="btnCreate"
                    Content="CREATE"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnCreate_Click"/>

                    <Button x:Name="btnExcel"
                    Content="EXCEL ▼"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnExcel_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuExcel"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}">
                                <MenuItem Header="Import (Replace)"
                                  Click="MenuExcelImportReplace_Click"
                                  Background="{StaticResource ControlBackground}"
                                  Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="Import (Combine)"
                                  Click="MenuExcelImportCombine_Click"
                                  Background="{StaticResource ControlBackground}"
                                  Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="Export Activities"
                                  Click="ExcelExportActivities_Click"
                                  Background="{StaticResource ControlBackground}"
                                  Foreground="{StaticResource ForegroundColor}"/>
                                <MenuItem Header="Export Template"
                                  Click="ExcelExportTemplate_Click"
                                  Background="{StaticResource ControlBackground}"
                                  Foreground="{StaticResource ForegroundColor}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>

                <!-- GROUP 2 -->
                <StackPanel Grid.Column="1"
                    Orientation="Horizontal">
                    <Button x:Name="btnPbook"
                    Content="PROG BOOK"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnPbook_Click"/>

                    <Button x:Name="btnWorkPackage"
                    Content="WP"
                    Width="120"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnWorkPackage_Click"/>
                </StackPanel>

                <!-- GROUP 3 -->
                <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
                    <!-- REPORTS -->
                    <Button x:Name="btnReports"
                    Content="REPORTS ▼"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnReports_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuReports"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}">
                                <!-- existing report menu items here -->
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- ANALYSIS -->
                    <Button x:Name="btnAnalysis"
                    Content="ANALYSIS ▼"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnAnalysis_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuAnalysis"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}">
                                <!-- existing analysis menu items here -->
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- TOOLS -->
                    <Button x:Name="btnTools"
                    Content="TOOLS ▼"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnTools_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuTools"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}">
                                <!-- existing tools menu items here -->
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- ADMIN -->
                    <Button x:Name="btnAdmin"
                    Content="ADMIN ▼"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnAdmin_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuAdmin"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}">
                                <!-- existing admin menu items here -->
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- TEST -->
                    <Button x:Name="btnTest"
                    Content="TEST ▼"
                    Width="100"
                    Height="40"
                    Margin="5,0"
                    Background="{StaticResource ControlBackground}"
                    Foreground="{StaticResource ForegroundColor}"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Click="BtnTest_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="menuTest"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource ForegroundColor}"
                                 BorderBrush="{StaticResource BorderColor}">
                                <!-- existing test menu items here -->
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>

                <!-- LOGO (always on far right) -->
                <Border Grid.Column="3"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="10,0,0,0">
                    <Image Width="100"
                   Height="51"
                   Source="pack://application:,,,/images/SummitS-Full Summit Peak Logo.jpg"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
                </Border>
            </Grid>
        </Border>


        <!-- CONTENT AREA (Middle) -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundColor}">
            <ContentControl x:Name="ContentArea" />
        </Border>

        <!-- STATUS BAR (Bottom) -->
        <Border Grid.Row="2" 
                Background="{StaticResource StatusBarBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current User -->
                <TextBlock Grid.Column="0" 
                           x:Name="txtCurrentUser"
                           Text="User: Steve.Amalfitano" 
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="10,0,20,0"/>

                <!-- Current Project -->


                <!-- Spacer -->
                <TextBlock Grid.Column="3"/>

                <!-- Record Count -->
                <TextBlock Grid.Column="4" 
                           x:Name="txtLastSyncsd"
                           Text="Last Sync: Never" 
                           Foreground="{StaticResource StatusBarForeground}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
            </Grid>
        </Border>

        <!-- Modern Loading Overlay for Excel Imports -->
        <Grid x:Name="LoadingOverlay"
         Grid.RowSpan="3"
        Background="#DD000000"
        Visibility="Collapsed"
           Panel.ZIndex="1000">
            <!-- No border/box - just centered content -->
            <StackPanel HorizontalAlignment="Center"
     VerticalAlignment="Center">
                <!-- Spinner -->
                <Viewbox Width="80" Height="80" HorizontalAlignment="Center">
                    <Canvas Width="100" Height="100">
                        <Ellipse x:Name="SpinnerEllipse"
      Width="80"
          Height="80"
            Canvas.Left="10"
       Canvas.Top="10"
        Stroke="{StaticResource AccentColor}"
          StrokeThickness="8"
      StrokeDashArray="60 40"
        Fill="Transparent"
      RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Canvas>
                </Viewbox>

                <!-- Loading Text -->
                <TextBlock x:Name="txtLoadingMessage"
         Text="Importing Excel File..."
  FontSize="18"
     FontWeight="SemiBold"
          Foreground="White"
                  HorizontalAlignment="Center"
       Margin="0,30,0,10"/>

                <!-- Progress Text -->
                <TextBlock x:Name="txtLoadingProgress"
          Text="0 of 0 records"
          FontSize="14"
   Foreground="#CCCCCC"
      HorizontalAlignment="Center"
        Margin="0,0,0,15"/>

                <!-- Progress Bar -->
                <ProgressBar x:Name="LoadingProgressBar"
 Width="300"
            Height="8"
        Minimum="0"
       Maximum="100"
              Value="0"
       Foreground="{StaticResource AccentColor}"
    Background="#333333"
      BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>